{% use "Form/App_bootstrap_3_layout.html.twig" %}

{% block form_start -%}
    {% set attr = attr|merge({class: (attr.class|default('') ~ ' form-horizontal')|trim}) %}
    {{- parent() -}}
{%- endblock form_start %}

{# Labels #}

{% block form_label -%}
{% spaceless %}
    {% if label is same as(false) %}
        <div class="{{ block('form_label_class') }}"></div>
    {% else %}
        {% set label_attr = label_attr|merge({class: (label_attr.class|default('') ~ ' ' ~ block('form_label_class'))|trim}) %}
        {{- parent() -}}
    {% endif %}
{% endspaceless %}
{%- endblock form_label %}

{% block form_label_class -%}
col-sm-2
{%- endblock form_label_class %}

{# Rows #}

{% block form_row -%}
{% spaceless %}
    {{ form_errors(form) }}
	{% if label != false %}
	    <div class="form-group{% if (not compound or force_error|default(false)) and not valid %} has-error{% endif %}">
	     {{ form_label(form) }}
	     <div class="{{ block('form_group_class') }}">
	{% else %}
	 	 <div class="form-group{% if (not compound or force_error|default(false)) and not valid %} has-error{% endif %}">
	     <div class="{{ block('form_group_class') }}">
	{% endif %}
     
        {{ form_widget(form) }}
        
        {% if icone is defined %}
        	<span class="{{ icone }} form-control-feedback left" aria-hidden="true"></span>
		{% endif %}
  
{# {% if label != false %}   #}
		</div>
    </div>
{# {% endif %}#}
{% endspaceless %}
{%- endblock form_row %}

{% block checkbox_row -%}
    {{- block('checkbox_radio_row') -}}
{%- endblock checkbox_row %}

{%- block form_widget_compound -%}
{# 	<div {{ block('widget_container_attributes') }} class="box-body">#}
		{%- if form.parent is empty -%}
			{{ form_errors(form) }}
		{%- endif -%}
		{{- block('form_rows') -}}
		{{- form_rest(form) -}}
{# 	</div>#}
{%- endblock form_widget_compound -%}

{% block radio_row -%}
    {{- block('checkbox_radio_row') -}}
{%- endblock radio_row %}

{% block checkbox_radio_row -%}
{% spaceless %}
    <div class="form-group{% if not valid %} has-error{% endif %}">
        <div class="{{ block('form_label_class') }}"></div>
        <div class="{{ block('form_group_class') }}">
            {{ form_errors(form) }}
            {{ form_widget(form) }}
        </div>
    </div>
{% endspaceless %}
{%- endblock checkbox_radio_row %}

{% block submit_row -%}
{% spaceless %}
    <div class="form-group">
        <div class="{{ block('form_label_class') }}"></div>
        <div class="{{ block('form_group_class') }}">
            {{ form_widget(form) }}
        </div>
    </div>
{% endspaceless %}
{% endblock submit_row %}

{% block form_group_class -%}
	col-md-6 col-sm-6 col-xs-12
{%- endblock form_group_class %}


{% block form_errors -%}
{% spaceless %}
	{% if errors|length > 0 -%}
    <div class="has-error">
    	{%- for error in errors -%}
    		{% if label == false %}
            {#<div class="col-sm-12">#}
				<label class="control-label has-error" for="inputError"><i class="fa fa-times-circle"></i> {{ error.message }}</label>
			{#</div>#}
    		{% else %}
            <div class="col-sm-3"></div>
            <div class="col-sm-9">
				<label class="control-label has-error" for="inputError"><i class="fa fa-times-circle"></i> {{ error.message }}</label>
			</div>
			{% endif %}
        {%- endfor -%}
        
	</div>
    {%- endif -%}
{% endspaceless %}
{%- endblock form_errors %}