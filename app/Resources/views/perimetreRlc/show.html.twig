{% extends 'perimetreRlc/new.html.twig' %}

{% block frameTitle %}Périmètres{% endblock frameTitle %}
{% block pageIcon %}fa fa-share-alt{% endblock pageIcon %}
{% block pageTitle %}Périmètres{% endblock pageTitle %}


{% block content %}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel panel_green">
            <div class="x_title">
                <h2>Détail<small></small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                        	<a class="collapse-link">
                        		<i class="fa fa-chevron-up"></i>	
                        	</a>
                        </li>
                    </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal form-label-left'}}) }}
                    {{ form_row(form.libelle, { 'label': "Libellé", 'attr': {'readonly': "readonly"}  }) }}
                {{form_end(form)}}
            </div>
        </div>
    </div>
</div>

<div class="row">
	<div class="col-md-12 col-sm-12 col-xs-12">
		<a class="btn btn-primary pull-right" href="{{ path('perimetre_rlc_edit', { 'id': perimetreRlc.id }) }}"><i class="fa fa-edit"></i> Modifier</a>
	</div>
</div>
<br/>
<!-- Liste des périmètres -->
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel panel_green">
            <!-- block content -->
            <div class="x_title">
                <h2>Liste des acteurs du niveau local (RLC)<small></small></h2>

                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </li>
                </ul>
            	<div class="clearfix"></div>
            </div>

            <!-- block content -->
            <div class="x_content">
                <table id="table_utilisateurs" class="table table-striped table-bordered app_datatable">
                    <thead>
                    <tr>
                        <th>Civilité</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Email</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for rlc in perimetreRlc.rlcs %}
                    <tr>
                        <td>{{ rlc.civilite |capitalize }}</td>
                        <td>{{ rlc.nom |upper }}</td>
                        <td>{{ rlc.prenom |title }}</td>
                        <td>{{ rlc.email |lower }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock content %}
