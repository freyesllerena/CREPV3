{% extends "index.base.html.twig" %} 

{% form_theme form 'Form/App_bootstrap_3_horizontal_layout.html.twig' %}

{% block pageIcon %}fa fa-balance-scale{% endblock pageIcon %}
{% block pageTitle %}Recours{% endblock pageTitle %}


{% block content %}


<div class="clearfix"></div>
<div class="row">
	<div class="col-md-12 col-sm-12 col-xs-12">
		<div class="x_panel panel_green">
			<div class="x_title">
				<h2>
					{% block formTitle %}
						Mentionner un nouveau recours sur le CREP de {{ crep.agent | identite }} 
					{% endblock formTitle %}
				</h2>

				<div class="clearfix"></div>
			</div>
			<div class="x_content">
				{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal form-label-left'}})}}
						{{ form_row(form.type, { 'label': "Type" }) }}
					  	{{ form_row(form.dateDemande, { 'label': "Date de la demande" }) }}
					  	{{ form_row(form.decision, { 'label': "Décision" }) }}
					  	{{ form_row(form.dateDecision, { 'label': "Date de la décision " }) }}
                      <div class="ln_solid"></div>
                      
                      <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                          <button type="submit" class="btn btn-primary pull-right">Valider</button>
                        </div>
                      </div>
                      
				{{form_end(form)}}
				<span style="color:red"><b>*</b></span><small> : Champ obligatoire</small>
			</div>
		</div>
	</div>
</div>

{% endblock content %}