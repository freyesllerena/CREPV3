{% use "Form/App_bootstrap_3_horizontal_layout.html.twig" %}

{% block _crep_mj02_objectifsEvalues_entry_widget %}
    <tr>
        <td>{{ form_row(form.libelle, {
                'label': false,
                'attr': {
                    'class': 'fieldCollection',
                    'style': 'width: 200%; min-height: 130px;'}
                })
            }}
