    <tr>
        <td colspan="3">{{ crep.motifAbsenceEntretien }}</td>
    </tr>
</table>
<table>
    <tr>
        <td></td>
        <td></td>
        <td colspan="2"><u>
                <stron>Date de l’entretien professionnel</stron>
            </u> :
        </td>
        <td>
            {% if crep.dateEntretien is not null %}
                {{ crep.dateEntretien | date('d/m/Y') }}
            {% endif %}
        </td>
    </tr>
</table>

<!-- page 02 -->
<div style="page-break-before:always;"></div>

<table>
    <tr>
        <td>
            <div class="text-left">
                <strong style="font-size: 14px;">1. APPRÉCIATION DES RÉSULTATS PROFESSIONNELS</strong><br><br>
                <span style="font-size: 12px;">1.1 Bilan des objectifs de l’année écoulée</span><br>
            </div>
        </td>
    </tr>
</table>

<table cellpadding="5" style="font-size: 11px;">
    <tr class="text-center">
        <th class="bordered bg-full strong-th" width="37%">Rappel de l’objectif de l’année écoulée assigné à l’agent
        </th>
        <th colspan="2" class="bordered bg-full strong-th" width="28%">Degré de réalisation de cet objectif</th>
        <th class="bordered bg-full strong-th" width="35%">Commentaires</th>
    </tr>
    
    {% if crep.objectifsEvalues | length > 0 %}
        
        {% for key, objectif in crep.objectifsEvalues %}
            <tr>
                <td rowspan="2" class="bordered" width="37%">{{ objectif.libelle | nl2br }}</td>
                <td rowspan="2" class="bordered" width="28%">
                    
                    <table class="text-left" cellpadding="2">
                        <tr>
                            <td>
                                {% if objectif.resultatObtenu == 0 %}
                                    &#9745;
                                {% else %}
                                    &#9744;
                                {% endif %}
                                atteint
                            </td>
                        </tr>
                        <tr>
                            <td>
                                {% if objectif.resultatObtenu == 1 %}
                                    &#9745;
                                {% else %}
                                    &#9744;
                                {% endif %}
                                partiellement atteint
                            </td>
                        </tr>
                        <tr>
                            <td>
                                {% if objectif.resultatObtenu == 2 %}
                                    &#9745;
                                {% else %}
                                    &#9744;
                                {% endif %}
                                non atteint
                            </td>
                        </tr>
                        <tr>
                            <td>
                                {% if objectif.resultatObtenu == 3 %}
                                    &#9745;
                                {% else %}
                                    &#9744;
                                {% endif %}
                                devenu sans objet
                            </td>
                        </tr>
                    </table>
                </td>
                <td class="bordered" width="35%">
                    <table>
                        <tr>
                            <td class="text-left">
                                <label>selon l’agent</label> :
                            </td>
                        </tr>
                        <tr>
                            <td class="text-left">
                                {{ objectif.indicateurs | nl2br }}
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td class="bordered" width="35%">
                    <table>
                        <tr>
                            <td class="text-left">
                                <label>selon le supérieur</label> :
                            </td>
                        </tr>
                        <tr>
                            <td class="text-left">
                                {{ objectif.resultat | nl2br }}
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        {% endfor %}
    
    {% else %}
        {% for i in 0..2 %}
            <tr>
                <td rowspan="2" class="bordered" width="37%"></td>
                <td rowspan="2" width="28%" class="bordered-bottom bordered-top bordered-rigth">
                    <table class="text-left" cellpadding="2">
                        <tr>
                            <td>&nbsp;&#9744;&nbsp;atteint</td>
                        </tr>
                        <tr>
                            <td>&nbsp;&#9744;&nbsp;partiellement atteint</td>
                        </tr>
                        <tr>
                            <td>&nbsp;&#9744;&nbsp;non atteint</td>
                        </tr>
                        <tr>
                            <td>&nbsp;&#9744;&nbsp;devenu sans objet</td>
                        </tr>
                    </table>
                </td>
                <td class="bordered" width="35%">
                    selon l’agent :
                    <br>
                </td>
            </tr>
            <tr>
                <td class="bordered" width="35%">
                    selon le supérieur :
                </td>
            </tr>
        {% endfor %}
    {% endif %}
</table>

<table>
    <tr>
        <td>
            <div class="text-left">
                <span style="font-size: 12px;">1.2 Appréciation globale sur la réalisation des objectifs de l’année écoulée</span><br>
            </div>
        </td>
    </tr>
</table>

<table cellpadding="5" style="font-size: 11px;" class="bordered">
    <tr>
        <td colspan="4">
            <u>Globalement, les objectifs sont</u> :
        </td>
    </tr>
    <tr>
        <td>
            {% if crep.contexteResultats == '0' and crep.contexteResultats is not null %}
                &#9745;
            {% else %}
                &#9744;
            {% endif %}
            <span>atteints</span>
        </td>
        <td>
            {% if crep.contexteResultats == '1' and crep.contexteResultats is not null %}
                &#9745;
            {% else %}
                &#9744;
            {% endif %}
            <span>partiellement</span>
        </td>
        <td>
            {% if crep.contexteResultats == '2' and crep.contexteResultats is not null %}
                &#9745;
            {% else %}
                &#9744;
            {% endif %}
            <span>non atteints</span>
        </td>
        <td>
            {% if crep.contexteResultats == '3' and crep.contexteResultats is not null %}
                &#9745;
            {% else %}
                &#9744;
            {% endif %}
            <span>devenus sans objet</span>
        </td>
    </tr>
    <tr>
        <td><br></td>
    </tr>
</table>

<br><br>

