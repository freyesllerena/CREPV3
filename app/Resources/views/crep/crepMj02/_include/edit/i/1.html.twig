{% form_theme form 'crep/crepMj02/Form/collections.form.html.twig' %}

<div class="row" id="objectifsEvaluesCollection" data-prototype="{{ form_widget(form.objectifsEvalues.vars.prototype)|e('html_attr') }}">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th class="text-center" style="width: 55%">Rappel de l’objectif de l’année écoulée assigné à
                    l’agent&nbsp;<span style="color:red;">*</span></th>
                <th class="text-center" style="width: 20%">Degré de réalisation de cet  objectif</th>
                <th class="text-center" style="width: 20%">Commentaires</th>
                <th style="width: 10%; min-width: 100px"><br></th>
            </tr>
            </thead>
            <tbody>
            {% for objectif in form.objectifsEvalues %}
                {{ form_widget(objectif) }}
            {%  endfor %}
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <button class="btn btn-primary add_collection_link objectifsEvalues pull-right">
            <i class="fa fa-plus"></i> Ajouter
        </button>
    </div>
</div>
