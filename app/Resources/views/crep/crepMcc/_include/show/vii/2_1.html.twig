<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th class="text-center">Libellé de la formation</th>
                    <th style="width: 15%" class="text-center">Demande de l'agent-e</th>
                    <th style="width: 15%" class="text-center">Avis du-de la responsable hiérarchique</th>
                    <th style="width: 15%" class="text-center">Demande au regard des objectifs du service</th>
                    <th style="width: 15%" class="text-center">Préciser l'objectif individuel visé</th>
                </tr>
            </thead>
            <tbody>
                {% for formationAdaptationPosteTravail in crep.formationsAdaptationPosteTravail %}
                    <tr>
                        <td>
                            {{ formationAdaptationPosteTravail.libelle }}
                        </td>
                        {% for index in 0..2 %}
                        	<td class="text-center">{{ formationAdaptationPosteTravail.origine|iconCheck(loop.index0)|raw }}</td>
                        {% endfor %}
                       	<td class="text-center">{{ formationAdaptationPosteTravail.besoinAvere|ouiNon }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>