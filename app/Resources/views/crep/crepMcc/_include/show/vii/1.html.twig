<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <table class="table table-bordered">
            <thead>
            <tr>
            	<th width="7%">Année</th>
                <th width="45%">Libellé de la formation suivie</th>
                <th>Commentaires <small>(appréciation, bilan, suites...)</small></th>
            </tr>
            </thead>
            <tbody>
            {% for formationSuivie in crep.formationsSuivies %}
                <tr>
                    <td>{{ formationSuivie.annee }}</td>
                    <td>{{ formationSuivie.libelle }}</td>
                    <td>{{ formationSuivie.commentaires|nl2br }}</td>
                </tr>
            {%  endfor %}
            </tbody>
        </table>
    </div>
</div>