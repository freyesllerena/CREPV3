{% extends "crep/crep.base.html.twig" %}

{% block content %}

    <div class="crep">

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel panel_green">
                    <div class="x_title row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <h2>IDENTIFICATION DES PARTIES PRENANTES</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="x_content row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <h3>1. Identification de l’agent </h3>
                            {% block i01 %}
                            {% endblock i01 %}
                            <h3>2. Identification de l'évaluateur</h3>
                            {% block i02 %}
                            {% endblock i02 %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel panel_green">
                    <div class="x_title row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <h2>I - DESCRIPTION DU POSTE ET DES FONCTIONS EXERCÉES </h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="x_content row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            {% block i1 %}
                            {% endblock i1 %}
                            {% block i2 %}
                            {% endblock i2 %}
                            {% block i3 %}
                            {% endblock i3 %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel panel_green">
                    <div class="x_title row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <h2>II - BILAN DE L’ANNEE ECOULÉE</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="x_content row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <h3>1. Lettre de mission ou d’objectifs</h3>
                            {% block ii1 %}
                            {% endblock ii1 %}
                            <h3>2. Contexte de l’année écoulée (organisation et fonctionnement du service)</h3>
                            {% block ii2 %}
                            {% endblock ii2 %}
                            <h3>3. Bilan et réalisation des objectifs de l’année écoulée</h3>
                            {% block ii3 %}
                            {% endblock ii3 %}
                            <h3>4. Autres dossiers ou travaux sur lesquels l’agent-e s’est investi-e en cours d’année</h3>
                            {% block ii4 %}
                            {% endblock ii4 %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel panel_green">
                    <div class="x_title row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <h2>III - OBJECTIFS DE L’AGENT-E POUR L’ANNÉE : {{ crep.agent.campagnePnc.anneeEvaluee }}</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="x_content row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <h3>1. Lettre de mission ou d’objectifs</h3>
                            {% block iii1 %}
                            {% endblock iii1 %}
                            <h3>2. Contexte prévisible de l’année à venir (organisation et fonctionnement du
                                service)</h3>
                            {% block iii2 %}
                            {% endblock iii2 %}
                            <h3>3. Objectifs assignés à l’agent-e</h3>
                            {% block iii3 %}
                            {% endblock iii3 %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel panel_green">
                    <div class="x_title row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <h2>IV - EXPÉRIENCE PROFESSIONNELLE : ÉVALUATION DES ACQUIS</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                            </ul>
                        </div>
                    </div>

                    {% block ivError %}{% endblock ivError %}

                    <div class="x_content row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <h3>1. Les compétences managériales démontrées par l’agent-e dans ses fonctions</h3>
                            {% block iv1 %}
                            {% endblock iv1 %}
                            <h3>2. Les compétences autres que managériales démontrées par l’agent-e dans ses
                                fonctions</h3>
                            {% block iv2 %}
                            {% endblock iv2 %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel panel_green">
                    <div class="x_title row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <h2>V - PERSPECTIVES D’ÉVOLUTION PROFESSIONNELLE DE L’AGENT-E</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="x_content row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <h3>Souhaits d’évolution professionnelle de l’agent-e :</h3>
                            {% block v1 %}
                            {% endblock v1 %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel panel_green">

                    {% block viError %}{% endblock viError %}

                    <div class="x_title row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <h2>VI - BESOINS DE FORMATION</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="x_content row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <h3>1. Formations suivies (années N-1 et N-2) :</h3>
                            {% block vi1 %}
                            {% endblock vi1 %}
                            <h3>2. Recueil des besoins de formation (années N et N+1) :</h3>
                            {% block vi2_1 %}
                            {% endblock vi2_1 %}
                            {% block vi2_2 %}
                            {% endblock vi2_2 %}
                            {% block vi2_3 %}
                            {% endblock vi2_3 %}
                            <p class="text-muted well well-sm no-shadow" style="margin-top: 10px;">
                                <sup>(1) </sup>Porter une coche en cas de réponse positive.<br>
                                <sup>(2) </sup>L’agent peut indiquer s’il souhaite utiliser son CPF pour la formation envisagée.
                                Les formations liées à une adaptation immédiate au poste de travail ne peuvent être imputées sur le CPF.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel panel_green">
                    <div class="x_title row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <h2>VII - APPRÉCIATIONS GÉNÉRALES</h2>

                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="x_content row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            {% block vii1 %}
                            {% endblock vii1 %}

                            {% block vii2 %}
                            {% endblock vii2 %}

                            <h3>Signature du supérieur hiérarchique direct ayant conduit l’entretien</h3>
                            {% block vii3 %}
                            {% endblock vii3 %}
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel panel_green">
                    <div class="x_title row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <h2>VIII - NOTIFICATION DU COMPTE RENDU DE L’ENTRETIEN PROFESSIONNEL</h2>
                            <ul class="nav navbar-right panel_toolbox">
                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="x_content row">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            {% block viii1 %}
                            {% endblock viii1 %}
                            <h3>Visa et observations éventuelles de l’autorité hiérarchique (N+2) :</h3>
                            {% block viii2 %}
                            {% endblock viii2 %}
                            {% block viii3 %}
                            {% endblock viii3 %}
                            <h3>Signature de l’agent-e :</h3>
                            {% block viii4 %}
                            {% endblock viii4 %}
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>

{% endblock content %}

{% block javascripts %}
    {{ parent() }}

    <!-- chained -->
    <script src="{{ asset('bundles/framework/cisirh/js/chained.js') }}"
            type="text/javascript"></script>

    <script type="text/javascript" charset="utf-8">
        $(function () {
            $("#departement").chained("#region");
        });
    </script>

{% endblock javascripts %}
