<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th class="text-center">Compétences requises dans les fonctions <small>(à compléter à partir de la fiche de poste)</small></th>
                <th class="text-center" width="100px">Exceptionnelle</th>
                <th class="text-center" width="100px">Forte</th>
                <th class="text-center" width="100px">Assez forte</th>
                <th class="text-center" width="100px">À développer</th>
                <th class="text-center" width="100px">Non observée</th>
            </tr>
            </thead>
            <tbody>
            {% if crep.competencesRequises is empty %}
                {% for i in 0..2 %}
                    <tr>
                        <td><br></td><td></td><td></td><td></td><td></td><td></td>
                    </tr>
                {% endfor %}
            {% else %}
                {% for key, competence in crep.competencesRequises %}
                    <tr>
                        {% if competence.libelle  is empty %}
                            <td><br></td><td></td><td></td><td></td><td></td><td></td>
                        {% else %}
                            <td>{{ competence.libelle | nl2br }}</td>
                            {% for index in 0..4 %}
                                <td class="text-center">{{ competence.niveauAcquis|iconCheckReverse(loop.revindex0, 4)|raw }}</td>
                            {% endfor %}
                        {% endif %}
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>

        <label>Observations sur les compétences requises dans les fonctions</label>
        <div class="row form-group project_detail">
            <p class="well well-xs"> {{ crep.observationsCompetencesRequises | nl2br }}</p>
        </div>
    </div>
</div>

