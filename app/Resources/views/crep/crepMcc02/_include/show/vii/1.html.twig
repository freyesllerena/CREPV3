<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th class="text-center" colspan="7">Appréciation générale sur la valeur professionnelle de l’agent-e
                    (résultats – compétences – manière de servir)</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                {% if crep.appreciationgenerale  %}
                    <td>{{ crep.appreciationgenerale }}</td>
                {% else %}
                    <td><br><br><br></td>
                {% endif %}
            </tr>
            </tbody>

        </table>
    </div>
</div>

<br>

{% set listeNiveauxPotentielEvolution  =  crep.potentielsEvolutions | allNiveauPotentielEvolutionCrepMcc02 %}
{% set listePotentielsEvolutions  =  crep.potentielsEvolutions %}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">

        <table class="table table-bordered">
            <thead>
            <tr>
                <th class="text-center" colspan="5">
                    Potentiel d’évolution de l’agent-e
                </th>
            </tr>
            <tr>
                <th class="text-center">Type d’emploi</th>
                {% for key, niveau in listeNiveauxPotentielEvolution %}
                    <th class="text-center" width="100px">{{ key | capitalize }}</th>
                {% endfor %}
            </tr>
            </thead>
            <tbody>

            {% for key, potentiel in crep.potentielsEvolutions %}

                <tr>
                    <td>{{ potentiel.libelle | nl2br }}</td>

                    {% if potentiel.niveau  is  not null %}

                        {% for keyPotentiel, potentiel in listePotentielsEvolutions %}

                            {%  if key ==  keyPotentiel %}

                                {% for index in listeNiveauxPotentielEvolution %}

                                    {%  if index ==  potentiel.niveau %}
                                        <td class="text-center"><i class="fa fa-check"></i><br></td>
                                    {% else %}
                                        <td><br></td>
                                    {% endif %}

                                {% endfor %}

                            {% endif %}

                        {% endfor %}

                    {% else %}

                        {% for index in listeNiveauxPotentielEvolution %}
                            <td><br></td>
                        {% endfor %}

                    {% endif %}

                </tr>

            {% endfor %}

            </tbody>

        </table>

        <label>Observations :</label>
        <div class="row form-group project_detail">
            <p class="well well-xs"> {{ crep.observationsPotentielEvolutionAgent | nl2br }}</p>
        </div>
    </div>
</div>

