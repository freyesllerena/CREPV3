<div class="row">
    <div class="col-md-6 col-sm-6 col-xs-6">
        <dl class="dl-horizontal m-t-md">
            <dt>Nom</dt>
            <dd>
                {% if crep.shdSignataire %}
                    {{ crep.shdSignataire | identite }}
                {% endif %}
            </dd>
        </dl>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-sm-6 col-xs-12">
        <label class="control-label col-md-3 col-sm-3 col-xs-12">
            Le
            {% set message = "Ce champ est aliment√© automatiquement par la date de signature du CREP par le N+1." %}
            <i class="fa fa fa-info-circle" data-placement="auto" data-toggle="popover-info"
               title="Date de signature du N+1" data-content="{{ message }}" data-trigger="hover"></i>
        </label>
        <div class="col-md-9 col-sm-9 col-xs-12 well well-xs">
            {% if crep.dateVisaShd %} {{ crep.dateVisaShd | date('d/m/Y') }}{% endif %}
        </div>
    </div>
</div>
