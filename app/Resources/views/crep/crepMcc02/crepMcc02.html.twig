        <td class="bordered-left-rigth bordered-bottom">{% if crep.explicationAttributionCia is not empty %}{{ crep.explicationAttributionCia | nl2br }}<br><br>{% else %}<br><br><br><br>{% endif %}</td>
    </tr>
</table>
<br><br><br><br>

<table class="text-center bordered-bottom bordered-left-rigth bordered-top">
    <tr class="text-center">
        <th class="bg-full" colspan="3" style="border-bottom: 1px #000000 solid">
            <strong>Proposition d’inscription au prochain tableau d’avancement de grade</strong>
        </th>
    </tr>
    <tr>
        <td>
            Oui
            {% if crep.agent and crep.agent.ah and crep.propositionAvancement == 0 and crep.propositionAvancement is not null %}
                &#9745;
            {% else %}
                &#9744;
            {% endif %}
        </td>
        <td>
            Non
            {% if crep.agent and crep.agent.ah and crep.propositionAvancement == 1 and crep.propositionAvancement is not null %}
                &#9745;
            {% else %}
                &#9744;
            {% endif %}
        </td>
        <td>
            Sans objet
            {% if crep.agent and crep.agent.ah and crep.propositionAvancement == 2 and crep.propositionAvancement is not null %}
                &#9745;
            {% else %}
                &#9744;
            {% endif %}
        </td>

    </tr>
</table>
<br><br><br><br>

<table style="font-size: 11px" class="bordered-left-rigth bordered-top bordered-bottom" cellpadding="3">
    <tr>
        <td class="text-center">
                <strong>SIGNATURE DU SUPÉRIEUR HIÉRARCHIQUE DIRECT AYANT CONDUIT L’ENTRETIEN</strong>
        </td>
    </tr>
    <tr>
        <td>
            <table cellpadding="3">
                <tr>
                    <td width="12%">Nom :</td>
                    <td width="88%">
                        {% if crep.shdSignataire %}
                        {{ crep.shdSignataire | identite }}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <td width="12%">Date :</td>
                    <td width="88%">{% if crep.dateVIsaShd %}{%  set dateVisaShd = crep.dateVIsaShd | date('d/m/Y H:i') %}{{ dateVisaShd  }}{% endif %}                        </td>
                </tr>
                <tr>
                    <td width="12%">Signature :</td>
                    <td width="88%">{% if crep.dateVisaShd %}CREP signé de manière dématérialisée{% endif %}<br><br></td>
                </tr>
            </table>
        </td>
    </tr>
</table>

<!-- page 7 -->
<div style="page-break-before:always;"></div>

<table>
    <tr>
        <td>
            <div class="bordered text-center"><strong>VIII – NOTIFICATION DU COMPTE RENDU DE L’ENTRETIEN PROFESSIONNEL</strong></div>
        </td>
    </tr>
</table>
<br><br>
<table style="font-size: 11px;" class="bordered-left-rigth bordered-bottom bordered-top" cellpadding="3">
    <tr class="text-center">
        <td>
            <strong>OBSERVATIONS ÉVENTUELLES DE L’AGENT-E</strong>
        </td>
    </tr>
    <tr>
        <td>{% if crep.observationsVisaAgent is not empty %}{{ crep.observationsVisaAgent | nl2br  }}<br><br><br><br>{% else %}<br><br><br><br><br><br><br><br>{% endif %}</td>
    </tr>
</table>

<br><br>
<table>
    <tr>
        <td>
            <div class="text-left">
                <strong>VISA ET OBSERVATIONS ÉVENTUELLES DE L’AUTORITÉ HIÉRARCHIQUE (N+2) :</strong>
            </div>
        </td>
    </tr>
</table>
<br><br>
<div class="bordered">
    <table cellpadding="6" style="font-size: 11px;">
        <tr>
            <td colspan="2" style="width: 50%">
                <strong>Nom</strong> : {% if crep.dateVisaAh %}{{ crep.ahSignataire | identite}} {% endif %}
            </td>
            <td style="width: 50%">
                <strong>Observations éventuelles</strong>  :<br> {% if crep.dateVisaAh %}{{ crep.observationsAh | nl2br }}{% endif %}
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <strong>Fonction exercée</strong> : {% if crep.dateVisaAh %}{{ crep.posteOccupe }}{% endif %}
            </td>
        </tr>
        <tr>
            <td colspan="2" style="width: 50%">
                <strong>Date</strong> : {% if crep.dateVisaAh %}{{ crep.dateVisaAh | date('d/m/Y H:i') }} {% endif %}
            </td>
            <td style="width: 50%">
                <strong>Visa</strong> :
                {% if crep.agent and crep.agent.sansAh %}
                    <span style="color: red">L'agent est déclaré comme étant <strong>"sans N+2"</strong>. L'étape de la signature du N+2 est donc <strong>supprimée</strong>.</span>
                {% elseif crep.dateVisaAh %}
                    CREP signé de manière dématérialisée<br>
                {% endif %}
            </td>
        </tr>
    </table>
</div>

<table>
    <tr>
        <td>
            <div class="text-left">
                <strong>SIGNATURE DE L’AGENT-E :</strong>
            </div>
        </td>
    </tr>
</table>

<div class="bordered">

    <table cellpadding="10" style="font-size: 11px;">
        <tr>
            <td>
                <span style="width:300px"><strong>Date</strong> :
                    {% if crep.dateNotification is not empty %}
                        {{ crep.dateNotification |date('d/m/Y H:i') }}
                    {% elseif crep.dateRefusNotification is not empty %}
                        {{ crep.dateRefusNotification |date('d/m/Y H:i') }}
                    {% endif %}
                </span>
            </td>
            <td>
                <strong>Signature</strong>  :<br>
                {% if crep.dateNotification is not empty %}
                    CREP visé de manière dématérialisée<br>
                    {{ crep.agent.civilite | title }} {{ crep.prenom | title }} {{ crep.nomUsage | upper }}
                {% elseif crep.dateRefusNotification is not empty %}
                    <span style="color: red">L'agent a refusé de viser son CREP.</span>
                {% elseif crep.agent and crep.agent.sansAh and crep.dateVisaShd %}
                    <span style="color: red">L'agent est déclaré comme étant <strong>"sans N+2"</strong>. L'étape de visa de l'agent est donc <strong>supprimée</strong>.</span>
                {% endif %}
            </td>
        </tr>
    </table>

    <br><br> <br><br>
</div>
