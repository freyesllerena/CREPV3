    .text-center {
        text-align: center;
    }

    .bordered {
        border: 1px #000000 solid;
    }

    .bg-full {
        background-color: #E9E9E9;
    }

    .strong-th {
        font-weight: bold;
    }

    body {
        font-size: 12px;
    }

    .cl-italic {
        font-style: italic;
