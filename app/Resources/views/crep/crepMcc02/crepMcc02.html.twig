<style>

    .text-center {
        text-align: center;
    }

    .bordered {
        border: 1px #000000 solid;
    }

    .bg-full {
        background-color: #E9E9E9;
    }

    .strong-th {
        font-weight: bold;
    }

    body {
        font-size: 12px;
    }

    .cl-italic {
        font-style: italic;
    }

    table.padding-mcc002 {
        padding-top: 5px;
        padding-bottom: 5px;
    }

    td.padding-mcc002 {
        padding-bottom: 30px;
    }

</style>
<!-- début -->

<body>

<table>
    <tr>
        <td width="34%">
            <img src="{{ asset('bundles/framework/images/logo_mcc02.jpg') }}" alt="MCC02" width="80" height="148">
        </td>
    </tr>
</table>
<br>
