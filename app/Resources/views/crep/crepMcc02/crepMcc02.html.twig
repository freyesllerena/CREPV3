                <td class="bordered text-center">{{ potentiel.libelle }}</td>
                {% for index in 0..3 %}
                    <td class="bordered text-center">
                        {% if potentiel.niveauAcquis == index %}X{% endif %}
                    </td>
                {% endfor %}

                {% if key == 0 %}
                    <td class="bordered"
                        rowspan="{{ crep.observationsPotentielEvolutionAgent | length }}">{{ crep.observationsPotentielEvolutionAgent }}</td>
                {% endif %}
            </tr>

        {% endfor %}

    {% endif %}
