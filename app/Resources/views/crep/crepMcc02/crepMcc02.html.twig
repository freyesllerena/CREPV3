<table>
    <tr>
        <td style="width: 2%"></td>
        <td style="width: 96%">
            <div class="bordered text-center" style="font-size: 14px;">
                <strong>ENCADREMENT SUPÉRIEUR</strong>
                   <br><br>
                <strong>Compte rendu de l’entretien professionnel</strong>
            </div>
        </td>
        <td style="width: 2%"></td>
    </tr>
</table>

<!-- page 1 -->

<div style="page-break-before:always;"></div>

<table class="height-title">
    <tr>
        <td style="width: 2%"></td>
        <td style="width: 96%">
            <div class="text-center">
                <h3>COMPTE RENDU</h3>
                <h3>DE L’ENTRETIEN PROFESSIONNEL</h3>
                <br>réalisé le : {{ crep.dateEntretien | date('d/m/Y') }}
                <h4>au titre de l’année : {{ anneeEvaluee }}</h4>
            </div>
        </td>
        <td style="width: 2%"></td>
    </tr>
</table>

<table>
    <tr>
        <td style="width: 2%"></td>
        <td style="width: 96%">

            <table class="padding-mcc002">
                <tr>
                    <td colspan="3"><u>entre l’agent-e</u> :</td>
                </tr>
                <tr>
                    <td width="17%">Prénom - Nom :</td>
                    <td width="40%">{{ crep.prenom | title  ~ ' - ' ~ crep.nomUsage | upper }}</td>
                    <td width="42%">Date de naissance : {% if crep.dateNaissance %} {{ crep.dateNaissance | date('d/m/Y') }} {% endif %}</td>
                </tr>
                <tr>
                    <td>Corps - Grade  : </td>
                    <td>{{ crep.corps | capitalize }} - <br> {{ crep.grade | capitalize }}</td>
                    <td>Échelon : {{ crep.echelon }}</td>
                </tr>
                <tr>
                    <td colspan="2" width="50%" >Nommé sur un emploi fonctionnel :
                       {% if crep.emploiFonctionnel == true %}
                           &#9745;
                       {% else %}
                           &#9744;
                       {% endif %}
                        Oui
                    </td>
                    <td width="50%">
                       {% if crep.emploiFonctionnel is not null and crep.emploiFonctionnel == false %}
                           &#9745;
                       {% else %}
                            &#9744;
                       {% endif %}
                        Non
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="width: 7%">
                    </td>
                    <td style="width: 55%">
                        Si oui, préciser lequel et, le cas échéant, son
                        groupe :
                    </td>
                    <td width="38%">{{ crep.libelleEmploiFonctionnel }} - <br> {{ crep.groupeEmploiFonctionnel }}</td>
                </tr>
                <tr>
                    <td colspan="3"><u>et son supérieur hiérarchique direct</u> :</td>
                </tr>
                <tr>
                    <td colspan="1" width="17%">Prénom - Nom : </td>
                    <td colspan="2" width="83%">{{ crep.prenomShd | title ~ ' - ' ~ crep.nomUsageShd | upper }}  </td>
                </tr>
                <tr>
                    <td colspan="1" width="17%">Corps - Grade  : </td>
                    <td colspan="2" width="83%">{{ crep.corpsShd | capitalize }} - {{ crep.gradeShd | capitalize }}</td>
                </tr>
                <tr>
                    <td style="width: 17%">Poste occupé :</td>
                    <td style="width: 40%">{{ crep.posteOccupeShd }}</td>
                    <td style="width: 43%">Depuis le : {{ crep.dateEntreePosteOccupeShd }} </td>
                </tr>
            </table>

        </td>
        <td style="width: 2%"></td>
    </tr>
</table>

<br><br><br>
<table>
    <tr>
        <td style="width: 2%"></td>
        <td style="width: 96%">
            <div class="bordered text-center"><strong>I – DESCRIPTION DU POSTE ET DES FONCTIONS EXERCÉES</strong></div>
        </td>
        <td style="width: 2%"></td>
    </tr>
</table>

<table>
    <tr>
        <td style="width: 2%"></td>
        <td style="width: 96%">

            <table class="padding-mcc002">
                <tr>
                    <td width="20%">Affectation :</td>
                    <td colspan="2" width="80%">{{ crep.affectation }}</td>
                </tr>
                <tr>
                    <td width="20%">Poste occupé : </td>
                    <td colspan="2" width="40%">{{ crep.posteOccupe  }}</td>
                    <td width="40%">Depuis le :  {% if crep.dateEntreePoste %}{{ crep.dateEntreePoste | date('d/m/Y') }}{% endif %}</td>
                </tr>
                <tr>
                    <td colspan="1" width="20%">GROUPE RIFSEEP  : </td>
                    <td colspan="2" width="80%">{{ crep.groupeRifseep }}</td>
                </tr>
                {% if  crep.groupeRifseep is empty %}
                    {% for i in 0..1 %}
                        <tr>
                            <td colspan="3"><br></td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="3"><br></td>
                    </tr>
                {% endif %}
                <tr>
                    <td class="padding-mcc002" colspan="3" width="100%">Fonctions exercées : {{ crep.fonctionsExercees }}</td>
                </tr>
                <tr>
                    <td colspan="3" width="100%">Environnement professionnel dans lequel s’exercent les fonctions : {{  crep.groupeFonctions }}</td>
                </tr>
                <tr>
                    <td colspan="2" width="45%">La fiche de poste est-elle adaptée ?</td>
                    <td width="55%">
                        {% if crep.fichePosteAdaptee == true %}
                            &#9745;
                        {% else %}
                            &#9744;
                        {% endif %}
                        Oui
                        {% if crep.fichePosteAdaptee is not null and crep.fichePosteAdaptee == false %}
                            &#9745;
                        {% else %}
                            &#9744;
                        {% endif %}
                        Non
                    </td>
                </tr>
                <tr>
                    <td width="10%"></td>
                    <td width="90%">
                        -  si non, sur quels points doit-elle être actualisée ?
                    </td>
                </tr>
                <tr>
                    <td width="10%"></td>
                    <td width="90%">{{ crep.pointsActualisesFichePoste }}</td>
                </tr>
            </table>

        </td>
        <td style="width: 2%"></td>
    </tr>
</table>

<!-- page 2 -->
<div style="page-break-before:always;"></div>
<table>
    <tr>
        <td style="width: 2%"></td>
        <td style="width: 96%">
            <div class="bordered text-center"><strong>II – BILAN DE L’ANNÉE ÉCOULÉE</strong></div>
        </td>
        <td style="width: 2%"></td>
    </tr>
</table>
<br>
<table>
    <tr>
        <td style="width: 2%"></td>
        <td style="width: 96%">
            <table class="padding-mcc002" style="font-size: 11px;">
                <tr>
                    <td width="80%">- <u>Renvoi à un document annexe (lettre de mission ou d’objectifs)</u> :
                        {% if crep.docAnnexeBilan == true %}
                            &#9745;
                        {% else %}
                            &#9744;
                        {% endif %}
                        Oui
                    </td>
                    <td width="20%">

                        {% if crep.docAnnexeBilan is not null and crep.docAnnexeBilan == false %}
                            &#9745;
                        {% else %}
                            &#9744;
                        {% endif %}
                        Non
                    </td>
                </tr>
                <tr>
                    <td colspan="2">- <u>Contexte de l’année écoulée (organisation et fonctionnement du service)</u> :</td>
                </tr>

                {% if  crep.contexteAnneeEcoulee is empty %}
                    <tr>
                        <td></td>
                    </tr>
                  {% else %}
                    <tr>
                        <td colspan="2">{{ crep.contexteAnneeEcoulee }}</td>
                    </tr>
                {% endif %}
                <tr>
                    <td colspan="2">- <u>Bilan et réalisation des objectifs de l’année écoulée</u> :</td>
                </tr>
            </table>
        </td>
        <td style="width: 2%"></td>
    </tr>
</table>
<br>
<table cellpadding="5" style="font-size: 11px;">
    <tr class="text-center">
        <th class="bordered bg-full strong-th" width="31%">Objectifs</th>
        <th colspan="2" class="bordered bg-full strong-th" width="34%">Réalisation</th>
        <th class="bordered bg-full strong-th" width="35%">Commentaires</th>
    </tr>
    {% if crep.objectifsEvalues | length > 0 %}

        {% for key, objectif in crep.objectifsEvalues %}
            {% set echelleEvaluation = ['&#9744;', '&#9744;', '&#9744;', '&#9744;'] %}
            {% set echelleEvaluation = setElementArray(echelleEvaluation, objectif.resultatObtenu, '&#9745;') %}
            <tr>
                <td class="bordered">
                    {{ objectif.libelle | nl2br }}
                </td>
                <td  width="29%" class="bordered">
                    <table class="text-center">
                        <tr><td width="85%">Atteint</td></tr>
                        <tr><td width="85%">Partiellement atteint</td></tr>
                        <tr><td width="85%">Non atteint</td></tr>
                        <tr><td width="85%">Partiellement atteint</td></tr>
                    </table>
                </td>

                <td width="5%" class="bordered">
                    <table>
                        <tr><td>{{ echelleEvaluation[0] | raw }}</td></tr>
                        <tr><td>{{ echelleEvaluation[1] | raw }}</td></tr>
                        <tr><td>{{ echelleEvaluation[2] | raw }}</td></tr>
                        <tr><td>{{ echelleEvaluation[3] | raw }}</td></tr>
                    </table>
                </td>
                <td class="bordered">
                    {{ objectif.resultat | nl2br }}
                </td>
            </tr>
        {% endfor %}

    {% else %}
        {% for i in 0..2 %}
            <tr>
                <td class="bordered"></td>
                <td  width="29%" class="bordered">
                    <table class="text-center">
                        <tr><td width="85%">Atteint</td></tr>
                        <tr><td width="85%">Partiellement atteint</td></tr>
                        <tr><td width="85%">Non atteint</td></tr>
                        <tr><td width="85%">Partiellement atteint</td></tr>
                    </table>
                </td>

                <td width="5%" class="bordered">
                    <table>
                        <tr><td>&#9744;</td></tr>
                        <tr><td>&#9744;</td></tr>
                        <tr><td>&#9744;</td></tr>
                        <tr><td>&#9744;</td></tr>
                    </table>
                </td>
                <td class="bordered"></td>
            </tr>
        {% endfor %}
    {% endif %}
</table>
<br>
<br>
<table>
    <tr>
        <td style="width: 2%"></td>
        <td style="width: 96%">
            - <u>Autres dossiers ou travaux sur lesquels l’agent-e s’est investi-e en cours d’année </u>:
        </td>
        <td style="width: 2%"></td>
    </tr>
</table>
<br>
<br>
<table cellpadding="5" style="font-size: 11px;">
    <tr class="text-center">
        <th class="bordered bg-full strong-th" width="34%" style="font-size: 10px;">Nature des dossiers ou travaux</th>
        <th class="bordered bg-full strong-th" width="32%" style="font-size: 10px;">Résultats obtenus par l’agent-e</th>
        <th class="bordered bg-full strong-th" width="34%" style="font-size: 10px;">Commentaires</th>
    </tr>
    {% if crep.autresObjectifs | length > 0 %}

        {% for objectif in crep.autresObjectifs %}
            <tr>
                <td class="bordered">{{ objectif.libelle | nl2br }}</td>
                <td class="bordered">{{ objectif.resultat }}</td>
                <td class="bordered">{{ objectif.indicateurs | nl2br }}</td>
            </tr>
        {% endfor %}

    {% else %}

        {% for i in 0..2 %}
            <tr>
                <td class="bordered">
                    <br><br>
                </td>
                <td class="bordered">
                    <br><br>
                </td>
                <td class="bordered">
                    <br><br>
                </td>
            </tr>
        {% endfor %}
    {% endif %}
</table>
<br>
<br>
<table>
    <tr>
        <td style="width: 2%"></td>
        <td style="width: 96%">
            <div class="bordered text-center"><strong>III – OBJECTIFS DE L’AGENT-E POUR L’ANNÉE : {{ crep.agent.campagnePnc.anneeEvaluee + 1 }}</strong></div>
        </td>
        <td style="width: 2%"></td>
    </tr>
</table>
<br>
<table>
    <tr>
        <td style="width: 2%"></td>
        <td style="width: 96%">
            <table class="padding-mcc002">
                <tr>
                    <td width="80%">- <u>Renvoi à un document annexe (lettre de mission ou d’objectifs)</u> :
                        {% if crep.docAnnexeObjectifsAvenir== true %}
                            &#9745;
                        {% else %}
                            &#9744;
                        {% endif %}
                        Oui
                    </td>
                    <td width="20%">

                        {% if crep.docAnnexeObjectifsAvenir is not null and crep.docAnnexeObjectifsAvenir == false %}
                            &#9745;
                        {% else %}
                            &#9744;
                        {% endif %}
                        Non
                    </td>
                </tr>
                <tr>
                    <td colspan="2">- <u>Contexte prévisible de l’année à venir (organisation et fonctionnement du service)</u> :</td>
                </tr>

                {% if  crep.contexteObjectifsAvenir is empty %}
                    <tr>
                        <td></td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">{{ crep.contexteObjectifsAvenir }}</td>
                    </tr>
                {% endif %}
            </table>
        </td>
        <td style="width: 2%"></td>
    </tr>
</table>

<br>
<br>
<table>
    <tr>
        <td style="width: 2%"></td>
        <td style="width: 96%">
            - <u>Objectifs assignés à l’agent-e</u> :
        </td>
        <td style="width: 2%"></td>
    </tr>
</table>
<br>
<br>
<table cellpadding="5" style="font-size: 11px;">
    <tr class="text-center">
        <th class="bordered bg-full strong-th " width="35%"><div style="font-size: 5pt">&nbsp;</div>Objectifs</th>
        <th class="bordered bg-full strong-th " width="25%"><div style="font-size: 5pt">&nbsp;</div>Échéance</th>
        <th class="bordered bg-full strong-th " width="20%">Conditions de reussite</th>
        <th class="bordered bg-full strong-th " width="20%"><div style="font-size: 5pt">&nbsp;</div>Indicateurs</th>
    </tr>
    {% if crep.objectifsFuturs | length > 0 %}

        {% for objectif in crep.objectifsFuturs %}
            <tr>
                <td class="bordered">{{ objectif.libelle | nl2br }}</td>
                <td class="bordered">{{ objectif.echeance | nl2br }}</td>
                <td class="bordered">{{ objectif.observationsEventuelles | nl2br }}</td>
                <td class="bordered">{{ objectif.indicateurs | nl2br }}</td>
            </tr>
        {% endfor %}

    {% else %}

        {% for i in 0..2 %}
            <tr>
                <td class="bordered">
                    <br>
                </td>
                <td class="bordered">
                    <br>
                </td>
                <td class="bordered">
                    <br>
                </td>
                <td class="bordered">
                    <br>
                </td>
            </tr>
        {% endfor %}
    {% endif %}
</table>

<!-- page 3 -->
<div style="page-break-before:always;"></div>

<table>
    <tr>
        <td style="width: 2%"></td>
        <td style="width: 96%">
            <div class="bordered text-center"><strong>IV – EXPÉRIENCE PROFESSIONNELLE : ÉVALUATION DES ACQUIS</strong></div>
        </td>
        <td style="width: 2%"></td>
    </tr>
</table>
<br>
- <u>Les compétences managériales démontrées par l’agent-e dans ses fonctions</u> :<br>
<br>
<table cellpadding="3" style="font-size: 11px;">
    <tr class="text-center">
        <th class="bordered bg-full strong-th" width="24%" >COMPÉTENCES<br>LIÉES A L’ACTION</th>
        <th class="bordered bg-full" width="10%">exceptionnelle*</th>
        <th class="bordered bg-full text-center" width="8%">forte</th>
        <th class="bordered bg-full" width="9%">assez forte</th>
        <th class="bordered bg-full" width="15%">à développer</th>
        <th class="bordered bg-full" width="11%">non observée</th>
        <th class="bordered bg-full" width="23%">observations</th>
    </tr>

    {% for key, competence in crep.competencesActions %}
        <tr class="text-center">
            <td class="bordered">{{ competence.libelle }}</td>
            {% for index in 0..4 %}
                {% set niveauAcquis = competence.niveauAcquis|iconCheckReverse(loop.revindex0, 4)|raw %}
                {% if niveauAcquis is not empty %}
                    <td class="bordered">X</td>
                {% else %}
                    <td class="bordered"><br></td>
                {% endif %}
            {% endfor %}
            {% if key == 0 %}
                <td class="bordered" rowspan="{{ crep.competencesActions | length }}">{{ crep.observationsCompetencesActions }}</td>
            {% endif %}
        </tr>
    {% endfor %}

</table>
<br>
<br>


<table cellpadding="3" style="font-size: 11px;">
    <tr class="text-center">
        <th class="bordered bg-full strong-th " width="24%">COMPÉTENCES<br>LIÉES A LA<br>RELATION</th>
        <th class="bordered bg-full" width="10%"><br><br>exceptionnelle*</th>
        <th class="bordered bg-full" width="8%"><br><br>forte</th>
        <th class="bordered bg-full" width="9%"><br><br>assez forte</th>
        <th class="bordered bg-full" width="15%"><br><br>à développer</th>
        <th class="bordered bg-full" width="11%"><br><br>non observée</th>
        <th class="bordered bg-full" width="23%"><br><br>observations</th>
    </tr>

    {% for key, competence in crep.competencesRelations %}
        <tr class="text-center">
            <td class="bordered">{{ competence.libelle }}</td>
            {% for index in 0..4 %}
                {% set niveauAcquis = competence.niveauAcquis|iconCheckReverse(loop.revindex0, 4)|raw %}
                {% if niveauAcquis is not empty %}
                    <td class="bordered">X</td>
                {% else %}
                    <td class="bordered"><br></td>
                {% endif %}
            {% endfor %}
            {% if key == 0 %}
                <td class="bordered" rowspan="{{ crep.competencesRelations | length }}">{{ crep.observationsCompetencesRelations }}</td>
            {% endif %}
        </tr>
    {% endfor %}

</table>
<br>
<br>


<table cellpadding="1" style="font-size: 11px;">
    <tr class="text-center">
        <th class="bordered bg-full strong-th " width="24%">COMPÉTENCES<br>LIÉES A<br>L’INTELLIGENCE<br>DES SITUATIONS</th>
        <th class="bordered bg-full" width="10%"><br><br>exceptionnelle*</th>
        <th class="bordered bg-full" width="8%"><br><br>forte</th>
        <th class="bordered bg-full" width="9%"><br><br>assez forte</th>
        <th class="bordered bg-full" width="15%"><br><br>à développer</th>
        <th class="bordered bg-full" width="11%"><br><br>non observée</th>
        <th class="bordered bg-full" width="23%"><br><br>observations</th>
    </tr>

    {% for key, competence in crep.competencesSituations %}
        <tr class="text-center">
            <td class="bordered">{{ competence.libelle }}</td>
            {% for index in 0..4 %}
                {% set niveauAcquis = competence.niveauAcquis|iconCheckReverse(loop.revindex0, 4)|raw %}
                {% if niveauAcquis is not empty %}
                    <td class="bordered">X</td>
                {% else %}
                    <td class="bordered"><br></td>
                {% endif %}
            {% endfor %}
            {% if key == 0 %}
                <td class="bordered" rowspan="{{ crep.competencesSituations | length }}">{{ crep.observationsCompetencesSituations }}</td>
            {% endif %}
        </tr>
    {% endfor %}

</table>

<br>
<br>
<table>
    <tr>
        <td style="width: 2%"></td>
        <td style="width: 96%;font-size:9px;">
            * Au total, le nombre de croix figurant dans la colonne « exceptionnelle » de ces 3 tableaux des compétences <br>
                managériales ne doit pas dépasser 5. Chaque croix « exceptionnelle » doit être motivée dans la colonne « observations».
            <br><br>
            - <u>Les compétences autres que managériales démontrées par l’agent-e dans ses fonctions</u> :
        </td>
        <td style="width: 2%"></td>
    </tr>
</table>
<br>
<br>
<table cellpadding="1" style="font-size: 11px;">
    <tr class="text-center">

        <th class="bordered bg-full strong-th " width="24%">COMPÉTENCES</th>
        <th class="bordered bg-full" width="11%">exceptionnelle*</th>
        <th class="bordered bg-full" width="8%">forte</th>
        <th class="bordered bg-full" width="9%">assez forte</th>
        <th class="bordered bg-full" width="15%">à développer</th>
        <th class="bordered bg-full" width="11%">non observée</th>
        <th class="bordered bg-full" width="20%">observations éventuelles</th>
    </tr>
    <tr>
        <td class="bordered bg-full" colspan="7">Requises dans les fonctions (à compléter à partir de la fiche de
            poste)
        </td>
    </tr>
    {% if crep.competencesRequises | length > 0 %}
        {% for key, competence in crep.competencesRequises %}
            <tr>
                <td class="bordered">{{ competence.libelle }}</td>
                <td class="bordered text-center">{% if competence.niveauAcquis == 0 %}X{% endif %}</td>
                <td class="bordered text-center">{% if competence.niveauAcquis == 1 %}X{% endif %}</td>
                <td class="bordered text-center">{% if competence.niveauAcquis == 2 %}X{% endif %}</td>
                <td class="bordered text-center">{% if competence.niveauAcquis == 3 %}X{% endif %}</td>
                <td class="bordered text-center">{% if competence.niveauAcquis == 4 %}X{% endif %}</td>
                {% if key == 0 %}
                    <td class="bordered"
                        rowspan="{{ crep.competencesRequises | length }}">{{ crep.observationsCompetencesRequises }}</td>
                {% endif %}
            </tr>
        {% endfor %}

    {% else %}
        {% for i in 0..2 %}
            <tr>
                <td class="bordered text-center"></td>
                <td class="bordered text-center"></td>
                <td class="bordered text-center"></td>
                <td class="bordered text-center"></td>
                <td class="bordered text-center"></td>
                <td class="bordered text-center"></td>
                {% if i == 0 %}
                    <td class="bordered" rowspan="2"></td>
