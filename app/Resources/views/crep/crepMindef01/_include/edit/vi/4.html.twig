{% form_theme form 'crep/crepMindef01/Form/App_form_crepMindef01.html.twig' %}

<div class="row" id="formationsReglementairesCollection" data-prototype="{{ form_widget(form.formationsReglementaires.vars.prototype)|e('html_attr') }}">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th width="60%">Libellé de la formation</th>
                <th nowrap class="text-center" width="9%">Priorité</th>
                <th class="text-center">Niveau SAME</th>
                <th width="85px" class="text-center"></th>
            </tr>
            </thead>
            <tbody>
            {% for formation in form.formationsReglementaires %}
                {{ form_row(formation,{'label':false}) }}
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <button class="btn btn-primary add_collection_link formationsReglementaires pull-right">
            <i class="fa fa-plus"></i> Ajouter
        </button>
    </div>
</div>