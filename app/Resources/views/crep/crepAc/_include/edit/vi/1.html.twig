{% form_theme form 'crep/crepAc/Form/App_form_crepAc.html.twig' %}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
    	<label class="control-label col-md-3 col-sm-3 col-xs-12" style="text-align:left;">Renvoi à un document annexe : </label>
	    <div class="col-md-9 col-sm-9 col-xs-12">
	        {{ form_row(form.docAnnexeBesoinsFormation, {'label_attr': {'class' : 'radio-inline', 'style':'text-align:left;'}}) }}
        </div>
    </div>
</div>

<div class="row" id="formationsAcSuiviesCollection" data-prototype="{{ form_widget(form.formationsAcSuivies.vars.prototype)|e('html_attr') }}">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <table class="table table-bordered">
            <thead>
                <tr>	
                	<th style="width: 10%" class="text-center">Année</th>
                    <th style="width: 50%">Intitulé de la formation</th>
                    <th style="width: 15%" class="text-center">Durée</th>
                    <th style="width: 19%">Commentaires (appréciation, bilan, suites)</th>
                    <th style="width: 6%"></th>
                </tr>
            </thead>
            <tbody>
                {% for formationSuivie in form.formationsAcSuivies %}
                    {{ form_widget(formationSuivie, {'attr': {'class': 'fieldCollection formation-autocomplete'}}) }}
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <button class="btn btn-primary add_collection_link formationsAcSuivies pull-right">
            <i class="fa fa-plus"></i> Ajouter
        </button>
    </div>
</div>
