{% form_theme form 'crep/crepMj01/Form/collections.form.html.twig' %}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Compétences professionnelles <br><small>(grille à compléter en intégralité)</small></th>
                    <th class="text-center" width="100px">Excellent</th>
                    <th class="text-center" width="100px">Très bon</th>
                    <th class="text-center" width="100px">Bon</th>
                    <th class="text-center" width="100px">Convenable</th>
                    <th class="text-center" width="100px">Insuffisant</th>
                    <th class="text-center" width="100px">Très insuffisant</th>
                </tr>
            </thead>
            <tbody>
            	{% for competence in form.competencesProfessionnelles %}
            	<tr>
            		 <td>
  						{{ crep.competencesProfessionnelles[loop.index0].libelle }}
        			 </td>
	                 
  					{{ form_widget(competence) }}
            	</tr>
            	{% endfor %}
            </tbody>
        </table>
    </div>
</div>
<small>(*) Pour la catégorie C, ces rubriques sont facultatives</small>

<div class="row">
	<div class="col-md-6 hidden-sm hidden-xs">
	</div>
	
	<div class="col-md-6 col-sm-12 col-xs-12">
		<table class="table table-bordered">
                <tr>
                    <th rowspan="2" style="background: #efefef; vertical-align: middle">Marge d'évolution</th>
                    <th class="text-center" style="background: #efefef" width="120px">En progrès</th>
                    <th class="text-center" style="background: #efefef" width="120px">Constant</th>
                    <th class="text-center" style="background: #efefef" width="120px">À améliorer</th>
                </tr>
				<tr>
					{%  for child in form.margeEvolutionCompetencesProfessionnelles.children %}
						<td class="text-center">{{ form_row(child, {'label': false}) }}</td>
					{% endfor %}
                </tr>
        </table>
	</div>
</div>

<br>


