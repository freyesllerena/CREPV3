{% form_theme form 'crep/crepMso5/Form/collections.form.html.twig' %}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th class="text-center">COMPÉTENCES PROFESSIONNELLES</th>
                <th class="text-center">Excellent</th>
                <th class="text-center">Moyen</th>
                <th class="text-center">Bon</th>
                <th class="text-center">Moyen</th>
                <th class="text-center">Insuffisant</th>
            </tr>
            </thead>

            <tbody>

            {% for competence in form.competencesTransverses %}
                {% if crep.competencesTransverses[loop.index0].typeCompetence == 'Générale' %}
                    <tr align="center">
                        <td class="text-left">
                            {{ crep.competencesTransverses[loop.index0].libelle }}
                        </td>
                        {{ form_widget(competence) }}
                    </tr>
                {% endif %}
            {% endfor %}

            <tr>
                <td colspan="7"><strong>Agents chargés de fonctions d’encadrement :</strong></td>
            </tr>

            {% for competence in form.competencesTransverses %}
                {% if crep.competencesTransverses[loop.index0].typeCompetence == "Fonction d'encadrement" %}
                    <tr align="center">
                        <td class="text-left">
                            {{ crep.competencesTransverses[loop.index0].libelle }}
                        </td>
                        {{ form_widget(competence) }}
                    </tr>
                {% endif %}
            {% endfor %}

            <tr>
                <td colspan="7"><strong>Toutes catégories d’agents :</strong></td>
            </tr>

            {% for competence in form.competencesTransverses %}
                {% if crep.competencesTransverses[loop.index0].typeCompetence == "Catégories d'agents" %}
                    <tr align="center">
                        <td class="text-left">
                            {{ crep.competencesTransverses[loop.index0].libelle }}
                        </td>
                        {{ form_widget(competence) }}
                    </tr>
                {% endif %}
            {% endfor %}

            </tbody>
        </table>
    </div>
</div>