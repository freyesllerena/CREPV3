<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th style="width: 55%" class="text-center">Formations liées à l’évolution<br>des métiers (T2)</th>
                <th style="width: 10%" class="text-center">Demande de l’agent (*)</th>
                <th style="width: 15%" class="text-center">Avis favorable du respon-sable hiérarchique (*)</th>
                <th style="width: 10%" class="text-center">Recours au CPF(*)</th>
                <th style="width: 10%" class="text-center">Échéance (année N, N +1)</th>
            </tr>
            </thead>
            <tbody>
            {% if  crep.formationsT2 is empty %}
                {% for i in 0..2 %}
                    <tr>
                        <td><br></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                {% endfor %}
            {% else %}
                {% for formation in crep.formationsT2 %}
                    <tr>
                        <td>
                            {{ formation.libelle }}
                        </td>
                        <td class="text-center">
                            {{ formation.demandeeAgent | iconCheck(true) | raw }}
                        </td>
                        <td class="text-center">
                            {{ formation.avisShd | iconCheck(true) | raw }}
                        </td>
                        <td class="text-center">
                            {{ formation.cpf | iconCheck(true) | raw }}
                        </td>
                        <td class="text-center">
                            {{ formation.echeance }}
                        </td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>
</div>
