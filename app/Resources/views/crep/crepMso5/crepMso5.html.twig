    {% set nbObjectifsFuturs = 1 %}
    {% set nbAutresObjectifsFuturs = 1 %}

    {% if crep.objectifsFutursIndividuels is empty %}
        {% for index in 1..4 %}
            <tr class="bg-full">
                <th class="bordered-left bordered-top bordered-bottom" width="25%">Objectif {{ index }} </th>
                <th class="bordered-right bordered-top bordered-bottom" width="75%" align="right">Objectif : individuel
