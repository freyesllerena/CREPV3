<!-- page 1 -->

<p class="text-center">
    <strong>ANNEXE 5</strong><br><br>MINISTERE DU TRAVAIL
    <h2>CORPS DE L’INSPECTION DU TRAVAIL <br> CONTRÔLEURS DU TRAVAIL</h2>
    <br><br>
    <label style="font-size:16px;">COMPTE RENDU D’ENTRETIEN PROFESSIONNEL -
        Exercice {{ crep.agent.campagnePnc.anneeEvaluee }}</label>
        <br>
</p>

<table cellpadding="10">
    <tr>
        <td width="2%"></td><td>Date d'entretien: {% if crep.dateEntretien %} {{ crep.dateEntretien | date('d/m/Y') }} {% endif %}</td>
    </tr>
</table>

<br><br><br>
<div class="text-center"><strong>I –PARTICIPANTS A L’ENTRETIEN</strong></div>

<br><br>
<table cellpadding="10">
    <tr class="bg-full">
        <th class="bordered" colspan="2">AGENT EVALUE</th>
    </tr>
    <tr>
        <th class="bordered" style="width:30%">NOM / Prénom :</th>
        <td class="bordered"
            style="width:70%">{{ crep.nomUsage | upper }}  {% if crep.prenom is not empty %} /  {% endif %} {{ crep.prenom | title }}</td>
    </tr>
    <tr>
        <th class="bordered" style="width:30%">Date de naissance :</th>
        <td class="bordered"
            style="width:70%">{% if crep.dateNaissance %}{{ crep.dateNaissance | date('d/m/Y') }}{% endif %}</td>
    </tr>
    <tr>
        <th class="bordered" style="width:30%">Catégorie :</th>
        <td class="bordered" style="width:70%">{{ crep.categorie }}</td>
    </tr>
    <tr>
        <th class="bordered" style="width:30%">Corps :</th>
        <td class="bordered" style="width:70%">{{ crep.corps }}</td>
    </tr>
    <tr>
        <th class="bordered" style="width:30%">Grade / Echelon :</th>
        <td class="bordered"
            style="width:70%">{{ crep.grade }} {% if crep.echelon is not empty %} / {% endif %} {{ crep.echelon }}</td>
    </tr>

    <tr>
        <th class="bordered" style="width:30%">Affectation : (direction, service, sous direction, bureau,…) :</th>
        <td class="bordered" style="width:70%">{% if crep.directionAffectation is empty %} {% for index in 1..2 %}<br>
                <br>{% endfor %} {% else %} {{ crep.directionAffectation }} {% endif %}</td>
    </tr>
    <tr>
        <th class="bordered" style="width:30%">Date de prise de fonction dans le poste :</th>
        <td class="bordered" style="width:70%">{% if crep.dateEntretien is empty %} {% for index in 1..2 %}<br>
                <br>{% endfor %} {% else %} {{ crep.datePriseFonctions | date('d/m/Y') }} {% endif %}</td>
    </tr>
</table>

<br><br><br><br>
<table cellpadding="10">
    <tr class="bg-full">
        <th class="bordered" colspan="2">EVALUATEUR</th>
    </tr>
    <tr>
        <th class="bordered" style="width:30%">NOM / Prénom :</th>
        <td class="bordered"
            style="width:70%">{{ crep.nomUsageShd | upper }}  {% if crep.prenomShd is not empty %} /  {% endif %} {{ crep.prenomShd | title }}</td>
    </tr>
    <tr>
        <th class="bordered" style="width:30%">Fonction :</th>
        <td class="bordered" style="width:70%">{{ crep.posteOccupeShd }}</td>
    </tr>
    <tr>
        <th class="bordered" style="width:30%">Tél. :</th>
        <td class="bordered" style="width:70%">{{ crep.telephoneShd }}</td>
    </tr>
    <tr>
        <th class="bordered" style="width:30%">Mail :</th>
        <td class="bordered" style="width:70%">{{ crep.emailShd }}</td>
    </tr>
</table>

<!-- page 2 -->
<div style="page-break-before:always;"></div>

<div class="text-center"><strong>II –POSTE OCCUPE
        <br><br><i style="font-size:12px;">(Fiche de poste ou lettre de mission à annexer au compte
        rendu)</i></strong></div>

<div>
    <table cellpadding="7" style="border:1px #000000 solid;">
        <tr class="bg-full">
            <th class="bordered" colspan="7"></th>
        </tr>
        <tr>
            <th class="bordered" style="width:40%">Intitulé du poste </th>
            <td class="bordered" style="width:60%">{% if crep.posteOccupeAgent is empty %} {% for index in 1..2 %}<br>
                    <br>{% endfor %} {% else %}{{ crep.posteOccupeAgent | nl2br }} {% endif %}</td>
        </tr>
        <tr>
            <th class="bordered" style="width:40%">Fonctions confiées à l'agent </th>
            <td class="bordered" style="width:60%">{% if crep.posteOccupeAgent is empty %} {% for index in 1..6 %}<br>
                    <br>{% endfor %}{% else %}{{ crep.posteOccupeAgent | nl2br }} {% endif %}</td>
        </tr>
        <tr>
            <th class="bordered" style="width:40%">Position dans la structure </th>
            <td class="bordered" style="width:60%">{% if crep.posteOccupeAgent is empty %} {% for index in 1..2 %}<br>
                    <br>{% endfor %} {% else %}{{ crep.postionDansStructure | nl2br }} {% endif %}</td>
        </tr>
        <tr>
            <th class="bordered" style="width:40%">Moyens à disposition de l’agent (si la précision est utile) </th>
            <td class="bordered" style="width:60%">{% if crep.posteOccupeAgent is empty %} {% for index in 1..2 %}<br>
                    <br>{% endfor %} {% else %}{{ crep.commentaireFonctionAgent | nl2br }} {% endif %}</td>
        </tr>
        <tr>
            <th class="bordered" style="width:40%">Nombre et catégorie des agents encadrés (le cas échéant) </th>
            <td class="bordered" style="width:60%">{% if crep.posteOccupeAgent is empty %} {% for index in 1..2 %}<br>
                    <br>{% endfor %} {% else %}{{ crep.agentsEncadres | nl2br }} {% endif %}</td>
        </tr>
    </table>
</div>

<div>
    <table cellpadding="7" style="border:1px #000000 solid;">
        <tr class="bg-full">
            <th colspan="7"></th>
        </tr>
        <tr>
            <th class="bordered" style="width:40%">Perspectives d’évolution du poste </th>
            <td class="bordered"
                style="width:60%">{% if crep.perspectivesEvolutionFonction is empty %} {% for index in 1..3 %}<br>
                    <br>{% endfor %}{% else %}{{ crep.perspectivesEvolutionFonction | nl2br }} {% endif %}</td>
        </tr>
    </table>
</div>

<div>
    <table cellpadding="7" style="border:1px #000000 solid;">
        <tr class="bg-full">
            <th colspan="7"></th>
        </tr>
        <tr>
            <th class="bordered" style="width:40%">Observations éventuelles de l’agent sur le poste et les fonctions;
                qualité de vie au travail, notamment en termes de charge de travail, d’organisation du travail et
                d’horaires
            </th>
            <td class="bordered"
                style="width:60%">{% if crep.observationsAgentSurSonActivite is empty %} {% for index in 1..3 %}<br>
                    <br>{% endfor %}{% else %}{{ crep.observationsAgentSurSonActivite | nl2br }} {% endif %}</td>
        </tr>
        <tr>
            <th class="bordered" style="width:40%">Observations éventuelles de l’évaluateur </th>
            <td class="bordered" style="width:60%">{% if crep.observationsShd is empty %} {% for index in 1..3 %}<br>
                    <br>{% endfor %} {% else %}{{ crep.observationsShd | nl2br }} {% endif %}</td>
        </tr>
    </table>
</div>

<!-- page 3 -->
<div style="page-break-before:always;"></div>

<div class="text-center"><strong>III – OBJECTIFS</strong></div>

<br>
<table cellpading="5">
    <tr>
        <td><h2 style="font-size:12px;">A – Bilan et réalisation des objectifs de l’année écoulée</h2></td>
    </tr>
</table>
<br><br>

<table cellpadding="12">
    {% set nbObjectifsEvalues = 1 %}
    {% set nbAutresObjectifsEvalues = 1 %}
    {% set echelleEvaluation = ['&#9744;', '&#9744;', '&#9744;', '&#9744;'] %}

    {% if crep.objectifsEvaluesIndividuels is empty %}
        {% for index in 1..4 %}
            <tr class="bg-full">
                <th class="bordered-left bordered-top bordered-bottom" width="24%">Objectif {{ index }} </th>
                <th class="bordered-top bordered-bottom bordered-right" width="48%" align="right">Objectif : individuel
                    &#9744; - collectif &#9744; &nbsp;&nbsp;
                </th>
                <th class="bordered-right bordered-top bordered-bottom" width="28%">Réalisation</th>
            </tr>
            <tr>
                <td class="bordered">Rappel de l’objectif</td>
                <td class="bordered">
                    <br><br>
                </td>
                <td rowspan="2" class="bordered">
                    &#9744; Atteint<br>
                    &#9744; Partiellement atteint <br>
                    &#9744; Non atteint <br>
                    &#9744; Devenu sans objet
                </td>
            </tr>
            <tr>
                <td align="left" class="bordered">Analyse des résultats et enseignements tirés</td>
                <td class="bordered">
                    {% for index in 1..2 %}<br><br>{% endfor %}
                </td>
            </tr>
        {% endfor %}

    {% else %}
        {% for objectif in crep.objectifsEvaluesIndividuels %}
            {% set echelleEvaluation = echelleEvaluation|merge({(objectif.resultatObtenu): '&#9745;'}) %} {# <==> echelleEvaluation[objectif.resultatObtenu] = '&#9745;' #}
            <tr class="bordered bg-full">
                <th class="bordered-left bordered-top bordered-bottom" width="24%">Objectif {{ nbObjectifsEvalues }} </th>
                <th class="bordered-top bordered-bottom bordered-right" width="48%" align="right">Objectif : individuel
                    &#9745; - collectif &#9744; &nbsp;&nbsp;
                </th>
                <th class="bordered-right bordered-top bordered-bottom" width="28%">Réalisation</th>
            </tr>
            <tr>
                <td class="bordered">Rappel de l’objectif</td>
                <td class="bordered" align="left">{{ objectif.libelle | nl2br }}</td>
                <td rowspan="2" class="bordered">
                    {% if objectif.resultatObtenu == 0 %} &#9745; {% else %} &#9744; {% endif %}Atteint <br>
                    {% if objectif.resultatObtenu == 1 %} &#9745; {% else %} &#9744; {% endif %}Partiellement atteint <br>
                    {% if objectif.resultatObtenu == 2 %} &#9745; {% else %} &#9744; {% endif %}Non atteint <br>
                    {% if objectif.resultatObtenu == 3 %} &#9745; {% else %} &#9744; {% endif %}Devenu sans objet
                </td>
            </tr>
            <tr>
                <td class="bordered" align="left">Analyse des résultats et enseignements tirés</td>
                <td class="bordered" align="left">{{ objectif.resultat | nl2br }}</td>
            </tr>
            {% set nbObjectifsEvalues = nbObjectifsEvalues + 1 %}
        {% endfor %}
    {% endif %}

    {% if crep.objectifsEvaluesCollectifs is not empty %}
        {% for objectif in crep.objectifsEvaluesCollectifs %}
            {% set echelleEvaluation = echelleEvaluation|merge({(objectif.resultatObtenu): '&#9745;'}) %} {# <==> echelleEvaluation[objectif.resultatObtenu] = '&#9745;' #}
            <tr class="bordered bg-full">
                <th class="bordered-left bordered-top bordered-bottom" width="24%">Objectif {{ nbObjectifsEvalues }} </th>
                <th class="bordered-top bordered-bottom bordered-right" width="48%" align="right">Objectif : individuel
                    &#9744; - collectif &#9745; &nbsp;&nbsp;
                </th>
                <th class="bordered-right bordered-top bordered-bottom" width="28%">Réalisation</th>
            </tr>
            <tr>
                <td class="bordered">Rappel de l’objectif</td>
                <td class="bordered" align="left">{{ objectif.libelle | nl2br }}</td>
                <td rowspan="2" class="bordered">
                    {% if objectif.resultatObtenu == 0 %} &#9745; {% else %} &#9744; {% endif %}Atteint <br>
                    {% if objectif.resultatObtenu == 1 %} &#9745; {% else %} &#9744; {% endif %}Partiellement atteint <br>
                    {% if objectif.resultatObtenu == 2 %} &#9745; {% else %} &#9744; {% endif %}Non atteint <br>
                    {% if objectif.resultatObtenu == 3 %} &#9745; {% else %} &#9744; {% endif %}Devenu sans objet
                </td>
            </tr>
            <tr>
                <td class="bordered" align="left">Analyse des résultats et enseignements tirés</td>
                <td class="bordered" align="left">{{ objectif.resultat | nl2br }}</td>
            </tr>
            {% set nbObjectifsEvalues = nbObjectifsEvalues + 1 %}
        {% endfor %}
    {% endif %}

    {% if crep.autresObjectifsEvalues is empty %}
        <tr class="bg-full">
            <th class="bordered-left bordered-right" colspan="2">Autres objectifs</th>
            <th class="bordered-left bordered-right" width="28%">Réalisation</th>
        </tr>
        <tr>
            <td class="bordered">Rappel de l’objectif</td>
            <td class="bordered">
                <br><br>
            </td>
            <td rowspan="2" class="bordered">
                &#9744; Atteint<br>
                &#9744; Partiellement atteint <br>
                &#9744; Non atteint <br>
                &#9744; Devenu sans objet
            </td>
        </tr>
        <tr>
            <td class="bordered" align="left">Analyse des résultats et enseignements tirés</td>
            <td class="bordered">
                {% for index in 1..2 %}<br><br>{% endfor %}
            </td>
        </tr>
    {% else %}
        {% for objectif in crep.autresObjectifsEvalues %}
            {% set echelleEvaluation = echelleEvaluation|merge({(objectif.resultatObtenu): '&#9745;'}) %} {# <==> echelleEvaluation[objectif.resultatObtenu] = '&#9745;' #}
            <tr class="bordered bg-full">
                <th class="bordered-left bordered-right" colspan="2">Autres objectifs {{ nbAutresObjectifsEvalues }}</th>
                <th class="bordered-left bordered-right" width="28%">Réalisation</th>
            </tr>
            <tr>
                <td width="24%" class="bordered">Rappel de l’objectif</td>
                <td width="48%" class="bordered" align="left">{{ objectif.libelle | nl2br }}</td>
                <td width="28%" rowspan="2" class="bordered">
                    {% if objectif.resultatObtenu == 0 %} &#9745; {% else %} &#9744; {% endif %}Atteint <br>
                    {% if objectif.resultatObtenu == 1 %} &#9745; {% else %} &#9744; {% endif %}Partiellement atteint <br>
                    {% if objectif.resultatObtenu == 2 %} &#9745; {% else %} &#9744; {% endif %}Non atteint <br>
                    {% if objectif.resultatObtenu == 3 %} &#9745; {% else %} &#9744; {% endif %}Devenu sans objet
                </td>
            </tr>
            <tr>
                <td width="24%" class="bordered" align="left">Analyse des résultats et enseignements tirés</td>
                <td width="48%" class="bordered" align="left">{{ objectif.resultat | nl2br }}</td>
            </tr>
            {% set nbAutresObjectifsEvalues = nbAutresObjectifsEvalues + 1 %}
        {% endfor %}
    {% endif %}
</table>

<br><br><br>
<table cellpading="5">
    <tr>
        <td><h2 style="font-size:12px;"> B – Appréciation globale sur l’activité et la réalisation des objectifs de
                l’année écoulée</h2></td>
    </tr>
</table>
<br>

<div>
    <table cellpadding="5" style="border:1px #000000 solid;">
        <tr class="bg-full">
            <th class="bordered" colspan="2"></th>
        </tr>
        <tr>
            <th class="bordered" style="width:35%">Appréciation de l’évaluateur </th>
            <td class="bordered" style="width:65%">{% if crep.posteOccupeAgent is empty %} {% for index in 1..4 %}<br>
                    <br>{% endfor %}{% else %}{{ crep.appreciationEvaluateur | nl2br }} {% endif %}</td>
        </tr>
        <tr>
            <th class="bordered" style="width:35%">Eléments particuliers à prendre en compte (environnement, événement
                imprévus, difficultés structurelles ou conjoncturelles,…)
            </th>
            <td class="bordered" style="width:65%">{% if crep.posteOccupeAgent is empty %} <br>
                    <br> {% else %}{{ crep.elementsParticuliers | nl2br }} {% endif %}</td>
        </tr>
    </table>
</div>

<div>
    <table cellpadding="5" style="border:1px #000000 solid;">
        <tr class="bg-full">
            <th class="bordered" colspan="2"></th>
        </tr>
        <tr>
            <th class="bordered" style="width:35%">Observations éventuelles de l’agent sur son activité et la
                réalisation des objectifs
            </th>
            <td class="bordered"
                style="width:65%">{% if crep.observationsAgentObjectifsPasses is empty %} {% for index in 1..2 %}<br>
                    <br> {% endfor %} {% else %} {{ crep.observationsAgentObjectifsPasses | nl2br }} {% endif %}</td>
        </tr>
        <tr>
            <th class="bordered" style="width:35%">Observations éventuelles de l’évaluateur </th>
            <td class="bordered"
                style="width:65%">{% if crep.observationsObjectifsPasses is empty %} {% for index in 1..2 %}<br>
                    <br> {% endfor %} {% else %} {{ crep.observationsObjectifsPasses | nl2br }}{% endif %}</td>
        </tr>
    </table>
</div>

<br><br>
<table cellpading="5">
    <tr>
        <td><h2 style="font-size:12px;"> C – Objectifs pour l’année à venir</h2></td>
    </tr>
</table>
<br><br>

