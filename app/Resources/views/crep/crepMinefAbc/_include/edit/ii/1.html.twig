{% form_theme form 'crep/crepMinefAbc/Form/App_form_crepMinefAbc.html.twig' %}

<div class="row" id="objectifsFutursCollection" data-prototype="{{ form_widget(form.objectifsFuturs.vars.prototype)|e('html_attr') }}">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Définition de l'objectif assigné</th>
                    <th>Perspectives d'amélioration des résultats professionnels</th>
                    <th width="85px" class="text-center"></th>
                </tr>
            </thead>
            <tbody>
                {% for objectifFutur in form.objectifsFuturs %}
                    {{ form_widget(objectifFutur) }}
                {%  endfor %}
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <button class="btn btn-primary add_collection_link objectifsFuturs pull-right">
            <i class="fa fa-plus"></i> Ajouter
        </button>
    </div>
</div>