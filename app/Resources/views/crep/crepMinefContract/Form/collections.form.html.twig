{% block form_errors -%}
    {% spaceless %}
        {% if errors|length > 0 -%}
            <div class="has-error">
                {%- for error in errors -%}
                    <div class="col-sm-12">
                        <label class="control-label has-error" for="inputError"><i class="fa fa-times-circle"></i> {{ error.message }}</label>
                    </div>
                {%- endfor -%}

            </div>
        {%- endif -%}
    {% endspaceless %}
{%- endblock form_errors %}

{% block _crep_minef_contract_competencesTransverses_entry_widget %}
    {% for child in form.niveauAcquis.children %}
        <td class="text-center">{{ form_row(child, {'label': false, 'attr': {'class': 'iCheckCollection '}}) }}</td>
    {% endfor %}
{% endblock %}

{% block form_group_class -%}
    {% if label == false %}
        col-md-12 col-sm-12 col-xs-12
    {% else %}
        col-md-9 col-sm-9 col-xs-12
    {% endif %}
{% endblock form_group_class %}