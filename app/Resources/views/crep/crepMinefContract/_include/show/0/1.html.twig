<div class="row form-group">
	<div class="col-md-6 col-sm-6 col-xs-12">
    	<label class="control-label col-md-3 col-sm-3 col-xs-12">Nom </label>
        <div class="col-md-9 col-sm-9 col-xs-12 well well-xs">
            {{ crep.nomUsage|upper }}
        </div>
    </div>
	<div class="col-md-6 col-sm-6 col-xs-12">
    	<label class="control-label col-md-3 col-sm-3 col-xs-12">Prénom </label>
        <div class="col-md-9 col-sm-9 col-xs-12 well well-xs">
            {{ crep.prenom|title }}
    	</div>
    </div>
</div>

<div class="row form-group">
	<div class="col-md-6 col-sm-6 col-xs-12">
    	<label class="control-label col-md-3 col-sm-3 col-xs-12">Date de naissance </label>
        <div class="col-md-9 col-sm-9 col-xs-12 well well-xs">
            {% if crep.dateNaissance %}{{ crep.dateNaissance | date('d/m/Y') }}{% endif %}
        </div>
	</div>
	<div class="col-md-6 col-sm-6 col-xs-12">
    	<label class="control-label col-md-3 col-sm-3 col-xs-12">Catégorie d'emploi </label>
        <div class="col-md-9 col-sm-9 col-xs-12 well well-xs">
			{{ crep.categorieAgent }}
        </div>
    </div>
</div>

<div class="row form-group">
	<div class="col-md-6 col-sm-6 col-xs-12">
    	<label class="control-label col-md-3 col-sm-3 col-xs-12">Direction ou service d'affectation </label>
        <div class="col-md-9 col-sm-9 col-xs-12 well well-xs">
            {{ crep.directionAffectation }}
        </div>
    </div>
</div>

<br/>