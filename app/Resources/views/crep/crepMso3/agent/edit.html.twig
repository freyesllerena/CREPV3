{% block javascripts %}
	{{ parent() }}
	<!-- chained -->
	<script src="{{ asset('js/chained.js') }}"></script>
    <script type="text/javascript">


    $(document).ready(function() {
    	
    	// Gestion de l'affichage ou non du champ "Point à actualiser" au chargement de la page
        if($('#crep_mso3_agent_fichePosteAdaptee_1').attr('checked')) {
        	document.getElementById("crep_mso3_agent_pointsActualisesFichePoste").disabled = false;
        } else {
        	document.getElementById("crep_mso3_agent_pointsActualisesFichePoste").disabled = true;
        }
      });
    
 	// Gestion de l'affichage ou non du champ "Point à actualiser" au clic sur "Oui"
	$("#crep_mso3_agent_fichePosteAdaptee_0" ).on('ifChanged', function(){
  		document.getElementById("crep_mso3_agent_pointsActualisesFichePoste").disabled = true;
  		$('#crep_mso3_agent_pointsActualisesFichePoste').val('');
    });

	// Gestion de l'affichage ou non du champ "Point à actualiser" au clic sur "Non"
  	$("#crep_mso3_agent_fichePosteAdaptee_1" ).on('ifChanged', function(){
  		document.getElementById("crep_mso3_agent_pointsActualisesFichePoste").disabled = false;
  		$('#crep_mso3_agent_pointsActualisesFichePoste').val('');
    });
	
    </script>
{% endblock javascripts %}