{% block content %}
	{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal'}}) }}
	    {{ parent() }}
	    {{ block('bouton_enregistrer') }}
	    {{ form_widget(form._token) }}
