{% form_theme form 'crep/crepMindef/_include/edit/iii/1.form.html.twig' %}
<br/>
<div class="row form-group">
    <div class="col-md-12 col-sm-12 col-xs-12">
    	<label for="crep_mindef_autresActivites" class="pull-left">Éléments de contexte à prendre en compte <i>(indiquer les éléments prévisibles pouvant impacter le poste et la mission de l'agent évalué)</i></label>
        {{ form_widget(form.contexteObjectifsAnneeEnCours) }}
    </div>
</div>
<br/>
<div class="row form-group" id="objectifsFutursCollection" data-prototype="{{ form_widget(form.objectifsFuturs.vars.prototype)|e('html_attr') }}">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <table class="table table-bordered" id="tableObjectifsFuturs">
            <thead>
                <tr>
                    <th>Objectif</th>
                    <th>Observation</th>
                    <th>Echéance</th>
                    <th width="85px" class="text-center"></th>
                </tr>
            </thead>
            <tbody>
                {% for objectifFutur in form.objectifsFuturs %}
                    {{ form_widget(objectifFutur) }}
                {%  endfor %}
            </tbody>
        </table>
    </div>
</div>
<div class="row form-group">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <button class="btn btn-primary add_collection_link objectifsFuturs pull-right" id="btnAddObjectifsFuturs" onclick="verifierNbObjectifs('tableObjectifsFuturs','btnAddObjectifsFuturs',true)" >
            <i class="fa fa-plus"></i> Ajouter
        </button>
    </div>
</div>