<div class="row">
	<div class="col-md-12 col-sm-12 col-xs-12">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th style="width: 30%">Autres competences du poste</th>
					<th style="width: 15%" class="text-center">A DEVELOPPER</th>
					<th style="width: 15%" class="text-center">MAITRISEE</th>
					<th style="width: 40%" class="text-center">OBSERVATIONS</th>
				</tr>
			</thead>
			<tbody>
				{% if (crep.autresCompetencesManageriales is empty) %} {% for index in	0..1 %}
				<tr>
					<td><br></td>
					<td></td>
					<td></td>
					<td></td>
				</tr>
				{% endfor %} {% else %} {% for autreCompetenceManageriale in crep.autresCompetencesManageriales %}
				<tr>
					<td>{{ autreCompetenceManageriale.libelle }}</td> {% for index in 0..2 %}
					<td class="text-center">{{
						autreCompetenceManageriale.niveauRequis|iconCheck(loop.index0)|raw }}</td>
					{% endfor %}
					<td>{{ autreCompetenceManageriale.appreciation|nl2br }}</td>
				</tr>
				{% endfor %} {% endif %}
			</tbody>
		</table>
	</div>
</div>
