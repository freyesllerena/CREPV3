<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <table class="table table-bordered">
            <thead>
            <tr>
                <th style="width: 40%">Objectifs d’ordre collectif</th>
                <th style="width: 15%" class="text-center">Échéance</th>
                <th style="width: 15%" class="text-center">Indicateurs</th>
                <th style="width: 40%">Observations éventuelles</th>

            </tr>
            </thead>
            <tbody>
            {% if crep.objectifsFutursCollectifs is not empty %}

                {% for objectif in crep.objectifsFutursCollectifs %}
                    <tr>
                        <td>{{ objectif.libelle|nl2br }}</td>
                        <td>{{ objectif.echeance| nl2br }}</td>
                        <td>{{ objectif.indicateurs|nl2br }}</td>
                        <td>{{ objectif.observationsEventuelles|nl2br }}</td>

                    </tr>
                {% endfor %}
            {% else %}
                {% for i in 1..2 %}
                    <tr>
                        <td><br></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>
</div>

