{% extends 'index.base.html.twig' %}

{% block frameTitle %}Organisation{% endblock frameTitle %}
{% block pageIcon %}fa fa-sitemap{% endblock pageIcon %}
{% block pageTitle %}Organisation{% endblock pageTitle %}


{% block content %}

<!-- page content -->
<div class="alert alert-danger alert-dismissible fade in" role="alert">
    <strong>Votre fichier contient des erreurs. Veuillez les corriger puis réessayez.</strong>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel panel_red">
            <div class="x_title">
                <h2>Liste des erreurs<small></small></h2>

                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>    
                        </a>
                    </li>
                </ul>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="table-campagne_brhp" class="table table-striped table-bordered app_datatable dt-responsive nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th width="1px" nowrap>Numéro de ligne</th>
                            <th width="1px" nowrap>Code</th>
                            <th width="1px" nowrap>Libelle</th>
                            <th>Erreur</th>
                        </tr>
                    </thead>


                    <tbody>
                    {% for erreur in resultatLecture['erreursFormat'] %}
                        <tr>
                            <td>1</td>
                            <td nowrap></td>
                            <td nowrap></td>
                            <td>
                            	<ul class="list-unstyled text-left">
                            	<li><i class="fa fa-times text-danger"></i> {{ erreur }}
                            	</ul>
                            </td>
                        </tr>
                    {% endfor %} 
                                        
                    {% for ligne, resultat in resultatLecture['erreursValidation'] %}
                        <tr>
                            <td> {{ ligne }}</td>
                            <td nowrap>{{ resultat[0].code }}</td>
                            <td nowrap>{{ resultat[0].libelle }}</td>
                            <td>
                            	<ul class="list-unstyled text-left">
                            	{% for erreur in resultat[1] %}
                            		<li><i class="fa fa-times text-danger"></i> {{ erreur.message }}</li>
                            	{% endfor %}
                            	{% if resultat[2] %}
                            		<li><i class="fa fa-times text-danger"></i> Unité organisationnelle en doublon</li>
                            	{% endif %}
                            	 </ul>
                            </td>
                        </tr>
                    {% endfor %}
                    
                    {% for erreur in resultatLecture['erreursRattachement'] %}
                        <tr>
                            <td> {{ erreur[0].ligne }}</td>
                            <td nowrap>{{ erreur[0].code }}</td>
                            <td nowrap>{{ erreur[0].libelle }}</td>
                            <td>
                            	{{ erreur[1] }}
                            </td>
                        </tr>
                    {% endfor %}                    
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
    	<button class="btn btn-primary pull-left" onclick="goBack()"><i class="fa fa-arrow-circle-left" aria-hidden="true"></i> Retour</button>
    </div>
</div>
    
<!-- /page content -->

{% endblock content %}

{% block javascripts %}
	{{ parent() }}
	<script>
		function goBack() {
    		window.history.back();
		}
	</script>
{% endblock javascripts %}
