{% block javascripts %}
    {{ parent() }}
    
    {% javascripts 
    	'gentelella-1.3.0/vendors/Chart.js/dist/2.7.1/Chart.min.js'
    	'bundles/framework/cisirh/js/jquery-ui.min.js'
	    'bundles/framework/cisirh/js/jquery.fileDownload.js' 
    %}
    	<script src="{{ asset_url }}"></script>
	{% endjavascripts %}
	
    <script type="text/javascript">
        <!-- Doughnut Chart -->
        {% if nbCrep==0 %}
            {% set nbCrepNonRenseignes = 1 %}
            {% set nbCrep = 1 %}
        {% endif %}
        
		$(document).ready(function() {
			// rend le crep non cliquable
            $('.disabled').on('click', function(e) {
                e.preventDefault();
            });

        	{{ macro.graphiqueAvancement('canvasDoughnut', nbCrep, nbCrepNonRenseignes, nbCrepModifieShd, nbCrepSignesShd, nbCrepVisesAgent, nbCrepRefusVisas, nbCrepSignesAh, nbCrepNotifies, nbRefusNotification, nbCrepCasAbsence) }}

        	{{ macro.historiqueAvancement('canvasLine', historiqueIndicateurs) }}


		var dtable = $('#ma_population').DataTable( {
		    	"oLanguage": oLanguage_fr(),
		        "processing": true,
		        "serverSide": true,
		        "ajax": "{{ path('agent_campagne_brhp_server_processing', { 'campagneBrhp': campagneBrhp.id, 'evaluable': 2, 'sansShd': 0, 'sansPerimetre': 0, 'onglet': 'ma_population' }) }}",
		        "sAjaxDataProp": "data",
		        "pageLength": 10,
		        "searchDelay": 500,
		        "sDom": '<"top"l>rt<"bottom"ip><"clear">',
				"order": [[ 0, "asc" ]],
