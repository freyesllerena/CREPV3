<table id="liste_creps" class="table table-striped table-bordered dt-responsive" cellspacing="0" width="100%">
	<thead>
		<tr>
            <th class="hasinput"><input type="text" data-column="0" class="form-control search-input-text" placeholder="Agent ..."/></th>
            <th class="hasinput"><input type="text" data-column="1" class="form-control search-input-text" placeholder="Affectation ..."/></th>
            <th class="hasinput"><input type="text" data-column="2" class="form-control search-input-text" placeholder="N+1 ..."/></th>
            <th class="hasinput"><input type="text" data-column="3" class="form-control search-input-text" placeholder="N+2 ..."/></th>
            <th class="hasinput" width="232px">
            	<select data-column="4" class="form-control search-input-text">
            		<option value="" selected="selected"></option>
            		<option value="0">Non renseigné</option>
            		<option value="1">En cours de rédaction</option>
            		<option value="2">Signé par le N+1</option>
            		<option value="3">Visé par l'agent</option>
            		<option value="4">Refus de visa</option>
            		<option value="5">Signé par le N+2</option>
            		<option value="6">Signé définitivement</option>
            		<option value="7">Refus de signature définitive</option>
            		<option value="8">Cas d'absence</option>
            	</select>
            </th>
            {% if app.session.get('selectedRole') == "ROLE_BRHP" %}
			<th></th>    
			<th></th>
			{% endif %}        
        </tr>
        
		<tr>
			<th>Agent</th>
			<th>Affectation</th>
			<th>N+1</th>
			<th>N+2</th>
			<th style="width: 250px">Etat d'avancement</th>
			{% if app.session.get('selectedRole') == "ROLE_BRHP" %}
			<th class="text-center" style="width: 100px">Import CREP papier</th>
			<th class="text-center" style="width: 60px">CREP</th>
			{% endif %}
			
		</tr>
	</thead>
</table>
        