{% extends 'index.base.html.twig' %}

{% block frameTitle %}Campagnes{% endblock frameTitle %}
{% block pageIcon %}fa fa-circle-o-notch{% endblock pageIcon %}
{% block pageTitle %}Campagnes{% endblock pageTitle %}


{% block content %}

<!-- page content -->
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel panel_green">
            <div class="x_title">
                <h2>Liste des campagnes<small></small></h2>

                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>    
                        </a>
                    </li>
                </ul>

                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="table-campagne_brhp" class="table table-striped table-bordered app_datatable_without_defaultSort dt-responsive" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Libellé</th>
                            {% if is_granted('ROLE_ADMIN') %}
                            <th>Ministère</th>
                            <th>Périmètre RLC</th>
                            {% endif %}                              
                            <th>Périmètre</th>
                            <th>Année d'évaluation</th>
                            <th>Date d'ouverture</th>
                            <th>Date de clôture</th>
                            <th width="120px">Compte à rebours</th>
                            <th>Statut</th>
                            <th style="text-align: center">Détail</th>
                        </tr>
                    </thead>


                    <tbody>
                    {% for campagneBrhp in campagnesBrhp %}
                        <tr>
                            <td><a href="{{ path('campagne_brhp_show', { 'id': campagneBrhp.id}) }}" title="Détail">
                                    {{ campagneBrhp.libelle }}  
                                </a>
                            </td>
                            {% if is_granted('ROLE_ADMIN') %}
                            <td>{{ campagneBrhp.campagneRlc.campagnePnc.ministere.libelleLong }}</td>
                            <td>{{ campagneBrhp.perimetreBrhp.perimetreRlc.libelle }}</td>
                            {% endif %}  
                                                            
                            <td>{{ campagneBrhp.perimetreBrhp.libelle }}</td>
                            <td>{{ campagneBrhp.anneeEvaluee }}</td>
                            <td>{{ campagneBrhp.dateDebut|date("d/m/Y") }}</td>
                            <td>{{ campagneBrhp.dateCloture | date('d/m/Y') }}</td>
                            
                            {# Compte à rebours : Pour calculer le nombre de jours qu'il y a entre deux dates, on convertie ces deux dates au format "timestamp", on calcule la différence puis on la convertie en jours et ce en la divisant sur 86400 #}
        	                {% if (campagneBrhp.dateCloture | date('Ymd') >= "now" | date('Ymd')) and (campagneBrhp.statut not in [constant('AppBundle\\EnumTypes\\EnumStatutCampagne::CLOTUREE'), constant('AppBundle\\EnumTypes\\EnumStatutCampagne::FERMEE')]) %}
                            <td><span class="label label-danger">J-{{ ((campagneBrhp.dateCloture | date('U') - "now" | date('U')) / 86400) | round(0, 'ceil') | abs }}</span></td>
                            {% else %}
                            <td></td>
                            {% endif %}
                            
                            <td>
                                <span class="label {{ campagneBrhp.statut | campagne_status_label }}">{{ campagneBrhp.statut }}</span>
                            </td>
                            <td style="text-align: center">
                                <a href="{{ path('campagne_brhp_show', { 'id': campagneBrhp.id }) }}" title="voir">
                                    <i class="fa fa-search"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->

{% endblock content %}

