{% import "macro/app.html.twig" as macro %}

<br>
<div class="row">
	<div class="col-md-4">
		{% if is_granted(constant('AppBundle\\Security\\CampagnePncVoter::SUPPRIMER_POPULATION'), campagnePnc) %}
			<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal_supprimer_population"><i class="fa fa-trash"></i> Supprimer la population</button>
		{% endif %}
    </div>
    
