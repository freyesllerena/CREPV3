    <div class="col-md-4">
    	 {% if is_granted(constant('AppBundle\\Security\\CampagnePncVoter::DIFFUSER_POPULATION'), campagnePnc) %}
			<button type="button" class="btn btn-success pull-right" data-toggle="modal" data-target="#modal_diffuser_population"><i class="fa fa-paper-plane"></i> Diffuser la population</button>
    	{% endif %}
    </div>
    
    
 </div>

{% if is_granted(constant('AppBundle\\Security\\CampagnePncVoter::SUPPRIMER_POPULATION'), campagnePnc) %}
    {{ macro.modal('danger', 'modal_supprimer_population', "Supprimer la population", "Voulez-vous vraiment <strong>supprimer</strong> cette population ?", "fa-trash", supprimerPopulationForm)}} 
