{% extends 'Personne/index.html.twig' %}

{% block frameTitle %}BRHP consultation{% endblock frameTitle %}
{% block pageTitle %}BRHP consultation{% endblock pageTitle %}
{% block listTitle %}Liste des acteurs RH de proximité en consulation (BRHP consultation){% endblock listTitle %}
{% block modalTitle %}Suppression de BRHP Consultation{% endblock modalTitle %}
{% block entityLabel %}BRHP consultation{% endblock entityLabel %}
{% block buttonLabel %}Nouveau BRHP consultation{% endblock buttonLabel %}



{% block content %}

        <!-- page content -->

			  <div class="row">
			    <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel panel_green">
                  <div class="x_title">
                    <h2>{{ block('listTitle') }}<small></small></h2>
                    
					<ul class="nav navbar-right panel_toolbox">
						<li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                    <table id="table_utilisateurs" class="table table-striped table-bordered app_datatable dt-responsive" cellspacing="0" width="100%">
                      <thead>
                        <tr>
                          <th width="85 px">Civilité</th>
                          <th>Nom</th>
                          <th>Prénom</th>
                          <th>Périmètres</th>
                          <th>Email</th>
                          <th width="85px" style="text-align: center">Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                      {% for personne in personnes %}
                        <tr>
                          <td>{{ personne.civilite|capitalize }}</td>
                          <td>{{ personne.nom|upper }}</td>
                          <td>{{ personne.prenom|title }}</td>
                          <td>
                              {% for perimetreBrhp in personne.perimetresBrhp %}
                                  {% if perimetreBrhp.perimetreRlc in perimetresRlc %}
                              		{{ perimetreBrhp.libelle }}<br/>
                                  {% endif %}
                              {% endfor %}
                          </td>
                          <td>{{ personne.email|lower }}</td>
                          <td style="text-align: center">
							<a href="{{ path(routePrefix~'_edit', { 'id': personne.id }) }}" title="Modifier"><i class="fa fa-edit"></i></a>&nbsp; &nbsp;
							<a href="" data-toggle="modal" data-target="#modal_delete_{{ personne.id }}" title="Supprimer"><i class="fa fa-trash"></i></a>
						  </td>
                        </tr>
                        {% endfor %}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
			</div>
        
      		<div class="row">
				<div class="col-md-12 col-sm-12 col-xs-12">
					<a href="{{ path(routePrefix~'_new') }}"><button class="btn btn-primary pull-right"><i class="fa fa-plus"></i> {{ block('buttonLabel') }}</button></a>
				</div><!-- /.col -->
			</div><!-- /.row -->
				
        <!-- /page content -->
        
	{# Modal: supprimer un RLC#}	
	{% for personne in personnes %}
	    {{ macro.modal('danger', 'modal_delete_'~ personne.id, "Supprimer l'acteur RH de proximité en constlation", "Voulez-vous vraiment <strong>supprimer</strong> cet acteur RH de proximité en consultation ?", "fa-trash", deleteForms[loop.index0])}} 
    {% endfor %}     
    
{% endblock content %}