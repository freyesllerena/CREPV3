{% extends "index.base.html.twig" %} 

{% form_theme form 'Form/App_bootstrap_3_horizontal_layout.html.twig' %}

{% block pageIcon %}fa fa-file-text-o{% endblock pageIcon %}
{% block pageTitle %}Nouveau modèle{% endblock pageTitle %}
{% block frameTitle %}Modèles CREP  {% endblock frameTitle %}

{% block content %}

<div class="clearfix"></div>
<div class="row">
	<div class="col-md-12 col-sm-12 col-xs-12">
		<div class="x_panel panel_green">
			<div class="x_title">
				<h2>{% block formTitle %}Création d'un nouveau modèle de CREP{% endblock formTitle %}<small></small></h2>

				<div class="clearfix"></div>
			</div>
			<div class="x_content">
				{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal form-label-left'}})}}
					{{ form_row(form.ministere, { 'label': "Ministère" }) }}
					{{ form_row(form.libelle, { 'label': "Libellé" }) }}
					{{ form_row(form.typeEntity, { 'label': "Entité" }) }}
					{{ form_row(form.actif, { 'label': "Statut" }) }}
					  <div class="ln_solid"></div>
		                      <div class="form-group">
		                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
		                          <button type="submit" class="btn btn-primary pull-right">Valider</button>
		                        </div>
		                      </div>
				{{ form_end(form) }}
						<span style="color:red"><b>*</b></span><small> : Champ obligatoire</small>
					</div>
		</div>
	</div>
</div>
				
{% endblock %}
